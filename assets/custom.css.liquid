/*-----------------------------------------------------------------------------/
/ Custom Theme CSS
/-----------------------------------------------------------------------------*/
/*---------------- Global Custom CSS -------------------*/
{{ settings.global_css }}

.t4s-pr_delivery {
  background: #e3e3e3;
  padding: 1rem;
  border-radius: 1rem;
}



.pt-brand-bar {
    display: none !important;
}
.custom-pr {
  background: white;
  border-radius: 1rem;
}

.banner-con-img {
  width: 100% !important;
  padding: 0rem !important;
}


  .t4s-col-12.t4s-col-item.t4s-col-thumb.t4s-pr.t4s-oh {
    display: flex !important;
    
}
/*sombra en el headers*/
.t4s-header__wrapper.t4s-pr.t4s-header-layout_logo_left {
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.55) !important;
    z-index: 2 !important;
}

.img-fija { margin-top:10px;}


/*Ajusta los botones del slider mas abajo*/
.t4s-slider-btn-pos-ontop.t4s-flicky-slider .flickityt4s-button.previous,
.t4s-slider-btn-pos-ontop.t4s-flicky-slider .flickityt4s-button.next {
    transform: none !important;
    transition: none !important;
    margin-bottom: -2rem !important;
}

.t4s-slider-btn-pos-ontop.t4s-flicky-slider .flickityt4s-button.previous:hover,
.t4s-slider-btn-pos-ontop.t4s-flicky-slider .flickityt4s-button.next:hover {
    transform: none !important;
    transition: none !important;
}
.section-personalizada .t4s-flicky-slider.t4s_box_pr_slider.t4s-products.t4s-text-center.t4s_rationt {
    width: 80%;
}

.section-personalizada .img-fijo {
    width: 20%;
    background: #fff;
    border-radius: 2rem;
    border: 2px solid black;
}
.product-fixed {
    text-align: center;
}

.contenedor-section-personalizada {
    display: flex;
    justify-content: space-between;
}
.product-fixed a {
    color: black !important;
}
.product-fixed a {
    color: #222222 !important;
    font-weight: 500;
}
.product-fixed img {
    border-radius: 3rem;
}
p.mencion-honorifica {
    color: black;
    font-weight: 500;
    font-size: 2rem;
}
img.calificacion-estrellas {
    width: 11rem;
    height: auto;
}


.nt_promotion_html p{
  color:black !important;
  text-align:center !important;
}
/* ajusta el mega menu*/
.t4s-row.t4s-gx-20.t4s-gy-30.t4s-lazy_menu.isotopet4s.isotopet4s-enabled {
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;

  margin: 0 auto !important;
}
.t4s-type__mega>.t4s-sub-menu{
   display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;

  margin: 0 auto !important;
}
/*estilo css para el viewer del flipbook*/

div#documentViewer {
    background: white !important;
}

/* Forzar el fondo blanco del visor de FlowPaper */
#documentViewer, 
#documentViewer div, 
#documentViewer canvas, 
.flowpaper_wrapper, 
.flowpaper, 
div[data-flowpaper-viewer] {
    background: white !important;
}

/*---------------- Custom CSS for only desktop -------------------*/
@media (min-width: 1025px) {
  {{ settings.desktop_css }}

}

/*---------------- Custom CSS for tablet, mobile -------------------*/
@media (max-width: 1024px) {
  {{ settings.tablet_mobile_css }}
   .coll-right{
    flex-direction: column-reverse !important;
}
}

/*---------------- Custom CSS for only tablet -------------------*/
@media (min-width: 768px) and (max-width: 1024px) {
  {{ settings.tablet_css }}
}

/*---------------- Custom CSS for only mobile -------------------*/
@media (max-width: 767px){
  {{ settings.mobile_css }}

  .coll-right{
    flex-direction: column-reverse !important;
}
  .contenedor-section-personalizada {
    flex-direction: column;
    gap: 2rem;
}
  .section-personalizada .img-fijo {
    width: 100%;
}
  .section-personalizada .t4s-flicky-slider.t4s_box_pr_slider.t4s-products.t4s-text-center.t4s_rationt {
    width: 100%;
}
}