{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

<div class="popup-comparador-content">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      {% render 'after-before-2' %}
    </div>
  </div>
</div>

<style>
.popup-comparador-content {
  background: #fff;
  padding: 30px;
  max-width: 800px;
  margin: 0 auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador-body {
  max-height: 70vh;
  overflow-y: auto;
}

.popup-comparador-before-after {
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
}

/* Asegurarnos que el contenido del before-after se muestre correctamente dentro del popup */
.popup-comparador-before-after .before-after-container {
  width: 100%;
  max-width: 100%;
  margin: 0;
}

.popup-comparador-before-after img {
  max-width: 100%;
  height: auto;
  display: block;
}

/* Ajustes específicos para el slider dentro del popup */
.popup-comparador-before-after .before-after-slider {
  width: 100%;
  z-index: 100;
}

/* Asegurar que el popup tenga suficiente z-index */
.popup-comparador-overlay {
  z-index: 999999;
}

/* Ajustes para dispositivos móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
// Reinicializar el before-after cuando el popup se abra
document.addEventListener('popup:opened', function() {
  if (typeof beforeAfter === 'function') {
    beforeAfter({{ product.id }});
  }
});
</script>
