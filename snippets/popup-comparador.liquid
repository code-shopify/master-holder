{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<div class="popup-comparador-content">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      <div class="container before_after">
        <div class="image-container">
          <div class="before_img">
            <img
              class="image-before slider-image"
              src="{{ before_image }}"
              alt="Imagen antes"
            >
            <span class="before_badge ba_badge">Antes</span>
          </div>
          <div class="after_img">
            <img
              class="image-after slider-image"
              src="{{ after_image }}"
              alt="Imagen después"
            >
            <span class="after_badge ba_badge">Después</span>
          </div>
        </div>
        <input
          type="range"
          min="0"
          max="100"
          value="50"
          class="ba-slider"
        >
        <div class="slider-line" aria-hidden="true"></div>
        <div class="slider-button" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="#fff" viewBox="0 0 256 256">
            <rect width="256" height="256" fill="none"></rect>
            <line x1="128" y1="40" x2="128" y2="216" stroke="currentColor" stroke-width="16" stroke-linecap="round"></line>
            <line x1="96" y1="128" x2="16" y2="128" stroke="currentColor" stroke-width="16" stroke-linecap="round"></line>
            <line x1="160" y1="128" x2="240" y2="128" stroke="currentColor" stroke-width="16" stroke-linecap="round"></line>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
}

/* Estilos del comparador */
.container.before_after {
  position: relative;
  overflow: hidden;
  aspect-ratio: 1/1;
  width: 100%;
  border-radius: 8px;
  --position: 50%;
}

.image-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.slider-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.before_img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  clip-path: inset(0 calc(100% - var(--position)) 0 0);
}

.ba-slider {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  cursor: col-resize;
  opacity: 0;
  z-index: 30;
}

.slider-line {
  position: absolute;
  width: 2px;
  height: 100%;
  background-color: white;
  left: var(--position);
  transform: translateX(-50%);
  pointer-events: none;
  z-index: 20;
}

.slider-button {
  position: absolute;
  background-color: rgba(255, 255, 255, 0.7);
  color: black;
  padding: 10px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 50%;
  left: var(--position);
  transform: translate(-50%, -50%);
  pointer-events: none;
  width: 20px;
  height: 40px;
  z-index: 20;
}

.ba_badge {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 5px 10px;
  border-radius: 4px;
  font-size: 14px;
}

.before_badge {
  top: 10px;
  left: 10px;
}

.after_badge {
  top: 10px;
  right: 10px;
}

@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
document.addEventListener('popup:opened', function() {
  setTimeout(() => {
    const container = document.querySelector(".before_after");
    const slider = document.querySelector(".ba-slider");
    
    if (container && slider) {
      // Limpiar eventos anteriores
      slider.removeEventListener('input', handleSlider);
      
      // Agregar nuevo evento
      slider.addEventListener('input', handleSlider);
      
      // Función para manejar el slider
      function handleSlider(e) {
        container.style.setProperty("--position", `${e.target.value}%`);
      }
      
      // Inicializar posición
      container.style.setProperty("--position", "50%");
      slider.value = 50;
    }
  }, 100);
});
</script>
{% endif %}
