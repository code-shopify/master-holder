{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<div class="popup-comparador-content">
  
  <div class="popup-comparador-before-after">
      <div class="before-after-container">
        <figure>
          <div id="before_after_{{ product.id }}"></div>
        </figure>
        <input 
          oninput="beforeAfter()"
          onchange="beforeAfter()"
          type="range" 
          min="0" 
          max="100" 
          value="50" 
          id="before_after_slider_{{ product.id }}"
        />
      </div>
    </div>
  <div class="popup-comparador-body">
    
  </div>
</div>

<style>
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
}

/* Estilos del comparador */
.before-after-container {
  aspect-ratio: 1 / 1;
  background: #1f1f1c;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.before-after-container figure {
  background-image: url({{ after_image }});
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

#before_after_{{ product.id }} {
  background-image: url({{ before_image }});
  background-size: cover;
  bottom: 0;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
  max-width: 98.6%;
  min-width: 0.6%;
  overflow: visible;
  position: absolute;
  width: 50%;
  animation: first 2s 1 normal ease-in-out 0.1s;
}

input[type="range"] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  background: transparent;
  cursor: col-resize;
  height: 100%;
  left: 0;
  margin: 0;
  outline: none;
  padding: 0;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 10;
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 100%;
  width: 40px;
  opacity: 0;
}

input[type="range"]::-moz-range-thumb {
  -moz-appearance: none;
  height: 100%;
  width: 40px;
  opacity: 0;
  border: none;
}

#before_after_{{ product.id }}::before {
  background: url('https://assets.codepen.io/191814/comparision.png') no-repeat scroll 0 center transparent;
  background-size: contain;
  content: " ";
  float: right;
  height: 100%;
  margin-right: -34px;
  position: relative;
  top: 0;
  width: 64px;
}

@keyframes first {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}

/* Ajustes para dispositivos móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
function beforeAfter() {
  document.getElementById("before_after_{{ product.id }}").style.width =
    document.getElementById("before_after_slider_{{ product.id }}").value + "%";
}

document.addEventListener('popup:opened', function() {
  setTimeout(beforeAfter, 100);
});
</script>
{% endif %}
