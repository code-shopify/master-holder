{% comment %}
  Popup para mostrar la comparaci칩n de productos
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<div id="popup-comparador-{{ product.id }}" class="popup-comparador-content t4s-mfp-hide">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">칑</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      <div class="before-after-container">
        <figure>
          <div id="before_after_{{ product.id }}"></div>
        </figure>
        <input 
          type="range" 
          min="0" 
          max="100" 
          value="50" 
          id="before_after_slider_{{ product.id }}"
        />
      </div>
    </div>
  </div>
</div>

<style>
/* 游댳 Estilos del popup */
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
}

/* 游댳 Estilos del comparador */
.before-after-container {
  aspect-ratio: 1 / 1;
  background: #1f1f1c;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.before-after-container figure {
  background-image: url({{ after_image }});
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

/* 游댳 Ajustar la imagen superpuesta */
#before_after_{{ product.id }} {
  background-image: url({{ before_image }});
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 50%; /* Se actualizar치 din치micamente */
  transition: width 0.2s ease-out; /* Efecto suave de deslizamiento */
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
  min-width: 0.6%;
  max-width: 98.6%;
}



/* 游댳 Soluci칩n: Evitar que otros `div` cubran el slider */
.before-after-container::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

/* 游댳 Ajustes m칩viles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>


{% endif %}
