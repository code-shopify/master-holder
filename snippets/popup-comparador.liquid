{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<!-- 🔹 Botón de imagen para abrir el popup -->
<a href="javascript:void(0);" 
   class="imagen-fija t4s-d-block" 
   data-popup-comparador 
   data-popup-id="popup-comparador-{{ product.id }}"
   aria-label="{{ 'products.product.view_comparison' | t }}">
   {% render "imagen-galeria-fix" %}
</a>

<!-- 🔹 Contenedor del popup -->
<div id="popup-comparador-{{ product.id }}" class="popup-comparador-overlay">
  <div class="popup-comparador-content">
    <div class="popup-comparador-header">
      <h2>{{ 'compare_popup.title' | t }}</h2>
      <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
    </div>
    
    <div class="popup-comparador-body">
      <div class="popup-comparador-before-after">
        <div class="before-after-container">
          <figure>
            <div class="before-image" id="before_after_{{ product.id }}"></div>
          </figure>
          <input 
            type="range" 
            min="0" 
            max="100" 
            value="50" 
            id="before_after_slider_{{ product.id }}"
            oninput="beforeAfter('{{ product.id }}')" 
            onchange="beforeAfter('{{ product.id }}')"
          />
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* 🔹 Fondo del popup */
.popup-comparador-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  justify-content: center;
  align-items: center;
}

/* 🔹 Contenedor del popup */
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  position: relative;
  border-radius: 8px;
  animation: fadeIn 0.3s ease-in-out;
}

/* 🔹 Animación de entrada */
@keyframes fadeIn {
  from {
    transform: translateY(-20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 🔹 Botón de cierre */
.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
  position: absolute;
  right: 15px;
  top: 10px;
}

/* 🔹 Estilos del comparador */
.before-after-container {
  aspect-ratio: 1 / 1;
  background: #1f1f1c;
  width: 100%;
  overflow: hidden;
  position: relative;
  transition: all 0.3s ease-in-out;
}

.before-after-container figure {
  background-image: url({{ after_image }});
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

/* 🔹 Ajustar la imagen superpuesta */
.before-image {
  background-image: url({{ before_image }});
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 0%; /* Inicia en 0% para la animación */
  transition: width 1.5s ease-in-out;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
}

/* 🔹 Estilos del slider */
input[type="range"] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  background: transparent;
  cursor: col-resize;
  height: 100vw;
  left: 0;
  margin: 0;
  outline: none;
  padding: 0;
  position: absolute;
  top: 50%;
  width: 100%;
  transform: translateY(-50%);
  z-index: 99999;
  pointer-events: all;
  opacity: 1;
}

/* 🔹 Ajustes móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
/* 🔹 Función para actualizar el comparador */
function beforeAfter(productId) {
    let slider = document.getElementById("before_after_slider_" + productId);
    let beforeDiv = document.getElementById("before_after_" + productId);
    
    if (slider && beforeDiv) {
        beforeDiv.style.width = slider.value + "%";
    }
}

/* 🔹 Animación inicial */
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("[id^='before_after_']").forEach(el => {
        setTimeout(() => {
            el.style.width = "50%";
        }, 300);
    });

    // 🔹 Hacer que el slider funcione
    document.querySelectorAll("input[type='range']").forEach(input => {
        input.addEventListener("input", function() {
            let productId = this.id.replace("before_after_slider_", "");
            beforeAfter(productId);
        });
    });
});

/* 🔹 Funcionalidad del popup */
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("[data-popup-comparador]").forEach(button => {
        button.addEventListener("click", function () {
            let popupId = this.getAttribute("data-popup-id");
            let popupOverlay = document.getElementById(popupId);
            if (popupOverlay) {
                popupOverlay.style.display = "flex";

                // 🔹 Reiniciar la animación del comparador cuando se abre el popup
                setTimeout(() => {
                    document.querySelectorAll("[id^='before_after_']").forEach(el => {
                        el.style.width = "50%";
                    });
                }, 300);
            }
        });
    });

    document.querySelectorAll(".popup-comparador__close").forEach(closeButton => {
        closeButton.addEventListener("click", function () {
            this.closest(".popup-comparador-overlay").style.display = "none";
        });
    });

    // 🔹 Cerrar el popup si se hace clic fuera de él
    document.querySelectorAll(".popup-comparador-overlay").forEach(popup => {
        popup.addEventListener("click", function (event) {
            if (event.target === popup) {
                popup.style.display = "none";
            }
        });
    });
});
</script>
{% endif %}
