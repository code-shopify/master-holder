{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

<div class="popup-comparador-content">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      {% render 'after-before-2' %}
    </div>
  </div>
</div>

<style>
.popup-comparador-content {
  background: #fff;
  padding: 30px;
  max-width: 800px;
  margin: 0 auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  max-height: 70vh;
  overflow-y: auto;
}

.popup-comparador-before-after {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* Aspecto cuadrado 1:1 */
  height: 0;
  overflow: hidden;
}

/* Ajustes específicos para el contenedor del before-after dentro del popup */
.popup-comparador-before-after .before-after-container {
  position: absolute !important;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: 0;
  background: var(--before-after-background, #1f1f1c);
}

.popup-comparador-before-after figure,
.popup-comparador-before-after .before-after,
.popup-comparador-before-after .before-after-slider {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* Asegurar que el popup tenga suficiente z-index */
.popup-comparador-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Ajustes para dispositivos móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }

  .popup-comparador-before-after {
    padding-bottom: 100%; /* Mantener aspecto cuadrado en móvil */
  }
}
</style>

<script>
document.addEventListener('popup:opened', function() {
  // Asegurarse de que el slider se inicialice cuando el popup se abra
  setTimeout(() => {
    initBeforeAfter({{ product.id }});
  }, 100);
});
</script>
