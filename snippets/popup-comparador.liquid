{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

<div class="popup-comparador-overlay">
  <div class="popup-comparador-content">
    <div class="popup-comparador-header">
      <h2>{{ 'compare_popup.title' | t }}</h2>
      <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
    </div>
    
    <div class="popup-comparador-body">
      <div class="popup-comparador-before-after">
        {% render 'after-before-2' %}
      </div>
    </div>
  </div>
</div>

<style>
.popup-comparador-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
  position: relative;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
  position: relative;
}

/* Asegurarnos que el slider dentro del popup sea interactivo */
.popup-comparador-before-after .before-after-container {
  position: relative;
  z-index: 1000000;
}

.popup-comparador-before-after input[type="range"] {
  position: absolute !important;
  z-index: 1000001 !important;
  pointer-events: auto !important;
}

/* Ajustes para dispositivos móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
document.addEventListener('popup:opened', function() {
  // Reinicializar el slider cuando se abra el popup
  setTimeout(() => {
    beforeAfter();
    // Asegurarnos que el slider sea interactivo
    const slider = document.getElementById("before_after_slider_{{ product.id }}");
    if (slider) {
      slider.style.pointerEvents = 'auto';
    }
  }, 100);
});
</script>
