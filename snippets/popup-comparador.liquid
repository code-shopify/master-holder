{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<div class="popup-comparador-content">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      <div class="before-after-container">
        <figure>
          <div id="before_after_{{ product.id }}"></div>
        </figure>
        <input 
          oninput="beforeAfter({{ product.id }})"
          onchange="beforeAfter({{ product.id }})"
          type="range" 
          min="0" 
          max="100" 
          value="50" 
          id="before_after_slider_{{ product.id }}"
        />
      </div>
    </div>
  </div>
</div>

<style>
/* 🔹 Estilos del popup */
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
}

/* 🔹 Estilos del comparador */
.before-after-container {
  aspect-ratio: 1 / 1;
  background: #1f1f1c;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.before-after-container figure {
  background-image: url({{ after_image }});
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

#before_after_{{ product.id }} {
  background-image: url({{ before_image }});
  background-size: cover;
  bottom: 0;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
  max-width: 98.6%;
  min-width: 0.6%;
  overflow: visible;
  position: absolute;
  width: 50%;
  animation: first 2s 1 normal ease-in-out 0.1s;
}

/* 🔹 Corrección del slider dentro del popup */
input[type="range"] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  background: transparent;
  cursor: grab; /* Cambia el cursor para indicar que es arrastrable */
  height: 40px !important; /* Aumentamos el tamaño para facilitar la interacción */
  left: 0;
  margin: 0;
  outline: none;
  padding: 0;
  position: absolute;
  top: 50%; /* Centrarlo correctamente */
  width: 100%;
  transform: translateY(-50%);
  z-index: 99999 !important; /* Asegurar que esté encima */
  pointer-events: all !important;
  opacity: 1 !important;
}

/* 🔹 Asegurar que el slider funcione correctamente */
input[type="range"]:active {
  cursor: grabbing; /* Cambia el cursor cuando el usuario lo arrastra */
}

/* 🔹 Solución: Evitar que otros `div` cubran el slider */
.before-after-container::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

/* 🔹 Ajustes móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
/* 🔹 Función de comparación de imágenes */
function beforeAfter(productId) {
  document.getElementById("before_after_" + productId).style.width =
    document.getElementById("before_after_slider_" + productId).value + "%";
}

/* 🔹 Ejecutar `beforeAfter()` cuando se abre el popup */
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("[data-popup-comparador]").forEach(button => {
        button.addEventListener("click", function () {
            setTimeout(function () {
                document.querySelectorAll('[id^="before_after_"]').forEach(el => {
                    beforeAfter(el.id.replace("before_after_", ""));
                });

                // 🔹 Asegurar que el slider sea interactivo
                document.querySelectorAll("input[type='range']").forEach(input => {
                    input.style.pointerEvents = "all";
                    input.style.opacity = "1"; // Asegurar que sea visible
                    input.focus();
                    input.click();
                });

                // 🔹 Forzar eventos de mouse en el slider
                document.querySelectorAll("input[type='range']").forEach(input => {
                    input.addEventListener("mousedown", function(event) {
                        event.stopPropagation(); // Evita que otros elementos bloqueen el click
                    });
                    input.addEventListener("touchstart", function(event) {
                        event.stopPropagation(); // Evita bloqueos en móviles
                    });
                });

            }, 500);
        });
    });
});
</script>
{% endif %}
