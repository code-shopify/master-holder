{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

<div class="popup-comparador-content">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      {% render 'before-after' %}
    </div>
  </div>
</div>

<style>
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
  z-index: 1000;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
}

.popup-comparador-before-after .ba_main {
  padding: 0;
}

.popup-comparador-before-after .container {
  border-radius: 0;
}

/* Ajustes para dispositivos móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
document.addEventListener('popup:opened', function() {
  // Reinicializar el slider cuando se abra el popup
  setTimeout(() => {
    const container = document.querySelector(".before_after");
    const slider = document.querySelector(".ba-slider");
    if (container && slider) {
      container.style.setProperty("--position", "50%");
      slider.value = 50;
    }
  }, 100);
});
</script>
