{% comment %}
  Popup comparador template
  Usage:
  {% render 'popup-comparador', product: product %}
{% endcomment %}

{%- if product.metafields.custom.before_image and product.metafields.custom.after_image -%}
<div id="popup-comparador-{{ product.id }}" class="t4s-mfp-hide">
  <div class="t4s-popup-wrapper">
    <button title="{{ 'general.popup.close' | t }}" type="button" class="t4s-btn-close">×</button>
    <div class="t4s-popup-content">
      <div class="before-after-container">
        <div class="loading-overlay" style="display: none;">
          <div class="loading-spinner"></div>
        </div>
        <figure>
          <div id="before_after_{{ product.id }}"></div>
        </figure>
        <input 
          oninput="beforeAfter('{{ product.id }}')" 
          onchange="beforeAfter('{{ product.id }}')" 
          type="range" 
          min="0" 
          max="100" 
          value="50" 
          id="before_after_slider_{{ product.id }}" 
          aria-label="{{ 'products.product.before_after_slider' | t }}"
        />
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --before-image: url({{ product.metafields.custom.before_image | image_url: 'master' }});
    --after-image: url({{ product.metafields.custom.after_image | image_url: 'master' }});
    --before-after-aspect-ratio: 1;
    --before-after-background-color: #1f1f1c;
    --slider-handle-size: 64px;
    --slider-border-width: 5px;
  }

  .before-after-container {
    aspect-ratio: var(--before-after-aspect-ratio);
    background: var(--before-after-background-color);
    width: 100%;
    max-width: 100vw;
    overflow: hidden;
    transition: all 0.3s ease-in-out;
    position: relative;
  }

  @media (max-width: 767px) {
    .before-after-container {
      aspect-ratio: 0.75;
    }
    
    #before_after_{{ product.id }}::before {
      width: 32px;
      margin-right: -17px;
    }
    
    :root {
      --slider-handle-size: 32px;
    }
  }

  .before-after-container figure {
    background-image: var(--after-image);
    position: relative;
    margin: 0;
    background-size: cover;
    width: 100%;
    height: 100%;
  }

  #before_after_{{ product.id }} {
    background-image: var(--before-image);
    background-size: cover;
    bottom: 0;
    border-right: 5px solid rgba(255, 255, 255, 0.7);
    box-shadow: 10px 0 15px -13px #000;
    height: 100%;
    max-width: 98.6%;
    min-width: 0.6%;
    overflow: visible;
    position: absolute;
    width: 50%;
    animation: first 2s 1 normal ease-in-out 0.1s;
    -webkit-animation: first 2s 1 normal ease-in-out 0.1s;
  }

  input#before_after_slider_{{ product.id }} {
    -moz-appearance: none;
    -webkit-appearance: none;
    border: none;
    background: transparent;
    cursor: col-resize;
    height: 100vw;
    left: 0;
    margin: 0;
    outline: none;
    padding: 0;
    position: relative;
    top: -100vw;
    width: 100%;
  }

  input#before_after_slider_{{ product.id }}::-moz-range-track {
    background: transparent;
  }

  input#before_after_slider_{{ product.id }}::-webkit-slider-thumb {
    -webkit-appearance: none;
    height: 100vw;
    width: 0.5%;
    opacity: 0;
  }

  input#before_after_slider_{{ product.id }}::-moz-range-thumb {
    -moz-appearance: none;
    height: 100vw;
    width: 0.5%;
    opacity: 0;
  }

  #before_after_{{ product.id }}::before {
    background: url(https://assets.codepen.io/191814/comparision.png) no-repeat scroll 0 center transparent;
    background-size: contain;
    content: " ";
    float: right;
    height: 100%;
    margin-right: -34px;
    position: relative;
    top: 0;
    width: 64px;
  }

  @keyframes first {
    0% { width: 0%; }
    50% { width: 80%; }
    100% { width: 50%; }
  }

  @-webkit-keyframes first {
    0% { width: 0%; }
    50% { width: 80%; }
    100% { width: 50%; }
  }

  .loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }
  
  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #3498db;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<script>
  console.log('Popup comparador script loaded for product:', '{{ product.id }}');
  
  function showLoading(productId) {
    const container = document.querySelector(`#popup-comparador-${productId} .loading-overlay`);
    if (container) container.style.display = 'flex';
  }
  
  function hideLoading(productId) {
    const container = document.querySelector(`#popup-comparador-${productId} .loading-overlay`);
    if (container) container.style.display = 'none';
  }
  
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof jQuery !== 'undefined' && typeof jQuery.magnificPopup !== 'undefined') {
      console.log('Initializing Magnific Popup');
      
      jQuery('[data-popup-comparador]').magnificPopup({
        type: 'inline',
        mainClass: 't4s-popup-wrapper',
        closeMarkup: '<button title="Close (Esc)" type="button" class="t4s-btn-close">×</button>',
        removalDelay: 500,
        callbacks: {
          beforeOpen: function() {
            console.log('Popup beforeOpen');
            this.st.mainClass = 'mfp-move-horizontal';
            showLoading('{{ product.id }}');
          },
          open: function() {
            console.log('Popup opened');
            beforeAfter('{{ product.id }}');
            hideLoading('{{ product.id }}');
          },
          error: function() {
            console.error('Error al abrir el popup');
            hideLoading('{{ product.id }}');
          }
        }
      });
    } else {
      console.error('jQuery or Magnific Popup not loaded');
    }
  });

  function beforeAfter(productId) {
    try {
      console.log('beforeAfter function called with productId:', productId);
      const slider = document.getElementById("before_after_" + productId);
      const range = document.getElementById("before_after_slider_" + productId);
      
      if (!slider || !range) {
        throw new Error('No se encontraron los elementos necesarios');
      }
      
      slider.style.width = range.value + "%";
    } catch (error) {
      console.error('Error en beforeAfter:', error);
      hideLoading(productId);
    }
  }
</script>
{%- endif -%} 