{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- 📌 Cargar PDF.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

<!-- 📌 Contenedor del FlipBook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="flipbook">
      <div class="page" id="left-page">
        <canvas id="pdf-canvas-left"></canvas>
      </div>
      <div class="page" id="right-page">
        <canvas id="pdf-canvas-right"></canvas>
      </div>
    </div>
    <div class="flipbook-controls">
      <button id="prevPage">⬅ Anterior</button>
      <span id="pageInfo">Página <span id="currentPage">1</span> de <span id="totalPages">?</span></span>
      <button id="nextPage">Siguiente ➡</button>
    </div>
    <a class="download-btn" href="{{ pdf_url }}" download>📥 Descargar PDF</a>
  {% else %}
    <p class="error-message">⚠ No se encontró ningún PDF. Verifica el metafield en Shopify.</p>
  {% endif %}
</div>

<!-- 📌 Script para Renderizar PDF con Animación Realista de Paso de Página -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    const url = "{{ pdf_url }}";
    const canvasLeft = document.getElementById("pdf-canvas-left");
    const ctxLeft = canvasLeft.getContext("2d");
    const canvasRight = document.getElementById("pdf-canvas-right");
    const ctxRight = canvasRight.getContext("2d");
    let pdfDoc = null;
    let currentPage = 1;
    let totalPages = 0;
    let scale = 1.5;
    let flipping = false;

    if (!url) {
        console.error("❌ No se encontró la URL del PDF.");
        document.getElementById("flipbook").innerHTML = "<p style='color: red;'>⚠ No hay catálogo disponible.</p>";
        return;
    }

    pdfjsLib.getDocument(url).promise.then(pdf => {
        pdfDoc = pdf;
        totalPages = pdf.numPages;
        document.getElementById("totalPages").textContent = totalPages;
        renderPages(currentPage);
    });

    function renderPages(num) {
        flipping = true;
        document.getElementById("flipbook").classList.add("flipping");

        setTimeout(() => {
            // Página izquierda (par)
            if (num > 1) {
                pdfDoc.getPage(num - 1).then(page => {
                    const viewport = page.getViewport({ scale: scale });
                    canvasLeft.width = viewport.width;
                    canvasLeft.height = viewport.height;
                    page.render({ canvasContext: ctxLeft, viewport: viewport });
                });
            } else {
                ctxLeft.clearRect(0, 0, canvasLeft.width, canvasLeft.height);
            }

            // Página derecha (impar)
            pdfDoc.getPage(num).then(page => {
                const viewport = page.getViewport({ scale: scale });
                canvasRight.width = viewport.width;
                canvasRight.height = viewport.height;
                page.render({ canvasContext: ctxRight, viewport: viewport });
            });

            document.getElementById("currentPage").textContent = num;
            flipping = false;
            document.getElementById("flipbook").classList.remove("flipping");
        }, 600);
    }

    document.getElementById("prevPage").addEventListener("click", function () {
        if (currentPage > 2 && !flipping) {
            currentPage -= 2;
            applyPageFlipEffect("left");
            renderPages(currentPage);
        }
    });

    document.getElementById("nextPage").addEventListener("click", function () {
        if (currentPage + 1 <= totalPages && !flipping) {
            currentPage += 2;
            applyPageFlipEffect("right");
            renderPages(currentPage);
        }
    });

    function applyPageFlipEffect(direction) {
        let page = direction === "right" ? document.getElementById("right-page") : document.getElementById("left-page");
        page.classList.add("flip");
        setTimeout(() => {
            page.classList.remove("flip");
        }, 600);
    }
});
</script>

<!-- 📌 Estilos para FlipBook con Animación de Paso de Página Realista -->
<style>
/* 📌 Contenedor principal */
.flipbook-container {
  width: 100%;
  max-width: 900px;
  margin: auto;
  text-align: center;
  position: relative;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* 📌 FlipBook */
#flipbook {
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 1500px;
  position: relative;
  transition: transform 0.6s ease-in-out;
}

/* 📌 Estilos de página */
.page {
  width: 50%;
  position: relative;
  transform-origin: center right;
  backface-visibility: hidden;
  transition: transform 0.6s ease-in-out;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

/* 📌 Página izquierda */
#left-page {
  transform-origin: center left;
}

/* 📌 Canvas */
canvas {
  width: 100% !important;
  height: auto;
  display: block;
}

/* 📌 Controles de navegación */
.flipbook-controls {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
}

.flipbook-controls button {
  background: #ff4c4c;
  color: white;
  border: none;
  padding: 8px 15px;
  font-size: 14px;
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

.flipbook-controls button:hover {
  background: #cc0000;
}

/* 📌 Botón de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}

/* 📌 Animación de pasar página (hacia afuera) */
.flip {
  animation: pageFlip 0.6s ease-in-out;
}

@keyframes pageFlip {
  0% { transform: rotateY(0deg) translateX(0px); }
  50% { transform: rotateY(-60deg) translateX(20px); opacity: 0.7; }
  100% { transform: rotateY(0deg) translateX(0px); opacity: 1; }
}

/* 📌 Mensaje de error */
.error-message {
  color: red;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
}
</style>
