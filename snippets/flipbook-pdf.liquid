{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url | prepend: "https:" %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- Contenedor del Flipbook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <iframe id="flipbook" src="https://flowpaper.com/flipbook/?pdf={{ pdf_url }}" frameborder="0"></iframe>
  {% else %}
    <p class="error-message">‚ö† No se encontr√≥ ning√∫n PDF. Verifica el metafield en Shopify.</p>
  {% endif %}

  <!-- Bot√≥n de descarga -->
  {% if pdf_url != "" %}
    <a class="download-btn" href="{{ pdf_url }}" download>üì• Descargar PDF</a>
  {% endif %}
</div>

<style>
/* Contenedor principal */
.flipbook-container {
  width: 95%;
  max-width: 900px;
  margin: 20px auto;
  text-align: center;
  background: #ffffff; /* Fondo blanco */
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* Ajuste del Flipbook */
#flipbook {
  width: 100%;
  max-width: 800px;
  height: 600px;
  margin: 0 auto;
  border: none; /* Eliminar borde gris */
  background: #ffffff; /* Fondo blanco */
}

/* Bot√≥n de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}

/* Mensaje de error */
.error-message {
  color: red;
  font-weight: bold;
  margin-top: 10px;
}

/* üìå Responsividad en m√≥viles */
@media screen and (max-width: 768px) {
  .flipbook-container {
    width: 100%;
    padding: 5px;
  }

  #flipbook {
    height: 400px; /* Reducimos el tama√±o en m√≥viles */
  }

  .download-btn {
