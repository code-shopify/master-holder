<div class="flipbook-container">
  <!-- Contenedor del flipbook -->
  <div id="flipbook"></div>

  <!-- Botones de navegaci√≥n -->
  <div class="flipbook-controls">
    <button id="prevPage">‚¨Ö Anterior</button>
    <span id="pageInfo">P√°gina <span id="currentPage">1</span> de <span id="totalPages">?</span></span>
    <button id="nextPage">Siguiente ‚û°</button>
  </div>

  <!-- Bot√≥n de descarga -->
  {% if page.metafields.custom.cat_logo_pdf != blank %}
    <a class="download-btn" href="{{ page.metafields.custom.cat_logo_pdf | file_url }}" download>üì• Descargar PDF</a>
  {% endif %}
</div>

<!-- Cargar jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Cargar Turn.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/turn.js/4.1.0/turn.min.js"></script>

<!-- Cargar PDF.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

<script>
jQuery(document).ready(function ($) {
  const url = "{{ page.metafields.custom.cat_logo_pdf | file_url }}";

  if (!url) {
    $("#flipbook").html("No hay cat√°logo disponible.");
    return;
  }

  const flipbookEl = $("#flipbook");
  let totalPages = 0;
  let renderedPages = 0;

  pdfjsLib.getDocument(url).promise.then(function (pdf) {
    totalPages = pdf.numPages;
    $("#totalPages").text(totalPages);

    // Crear p√°ginas vac√≠as en el flipbook
    for (let i = 0; i < totalPages; i++) {
      flipbookEl.append(`<div class="page"><canvas id="canvas${i + 1}"></canvas></div>`);
    }

    // Cargar cada p√°gina en su correspondiente canvas
    for (let i = 1; i <= totalPages; i++) {
      pdf.getPage(i).then(function (page) {
        const viewport = page.getViewport({ scale: 1.5 });
        const canvas = document.getElementById(`canvas${i}`);
        const context = canvas.getContext("2d");

        canvas.height = viewport.height;
        canvas.width = viewport.width;

        page.render({ canvasContext: context, viewport }).promise.then(() => {
          renderedPages++;
          if (renderedPages === totalPages) {
            inicializarFlipbook();
          }
        });
      });
    }
  }).catch(function (error) {
    console.error("Error al cargar el PDF:", error);
    flipbookEl.html("<p>Error al cargar el cat√°logo.</p>");
  });

  function inicializarFlipbook() {
    $("#flipbook").turn({
      width: 800,
      height: 600,
      autoCenter: true,
      duration: 1000
    });

    $("#prevPage").on("click", function () {
      $("#flipbook").turn("previous");
    });

    $("#nextPage").on("click", function () {
      $("#flipbook").turn("next");
    });

    $("#flipbook").bind("turned", function (event, page) {
      $("#currentPage").text(page);
    });
  }
});
</script>

