  padding: 8px 15px;
  font-size: 14px;
  border-radius: 5px;
  cursor: pointer;
}

.flipbook-controls button:hover {
  background: #cc0000;
}

/* Bot√≥n de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
