{%- assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url -%}

{% if pdf_url != blank %}
  <div class="pdf-flipbook-container">
    <!-- Contenedor del Flipbook -->
    <div id="pdf-flipbook">
      <div class="flipbook">
        <!-- Las p√°ginas del PDF se insertar√°n aqu√≠ din√°micamente -->
      </div>
    </div>

    <!-- Controles de navegaci√≥n -->
    <div class="flipbook-controls">
      <button id="prev-page" class="flipbook-btn">‚è™ Anterior</button>
      <button id="next-page" class="flipbook-btn">‚è© Siguiente</button>
    </div>

    <!-- Bot√≥n de descarga -->
    <a href="{{ pdf_url }}" download="catalogo.pdf" class="download-btn">üì• Descargar PDF</a>
  </div>

  <!-- Librer√≠as necesarias -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.14.305/pdf.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/turn.js/4/turn.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var url = "{{ pdf_url }}";

      if (!url || url === "undefined") {
        console.error("‚ö†Ô∏è No se encontr√≥ el archivo PDF en el metacampo.");
        return;
      }

      var flipbook = document.querySelector(".flipbook");

      pdfjsLib.getDocument(url).promise.then(function(pdfDoc) {
        var totalPages = pdfDoc.numPages;

        for (let i = 1; i <= totalPages; i++) {
          let pageDiv = document.createElement("div");
          pageDiv.classList.add("flip-page");
          pageDiv.innerHTML = `<canvas id="page-${i}"></canvas>`;
          flipbook.appendChild(pageDiv);
        }

        for (let i = 1; i <= totalPages; i++) {
          renderPage(i, pdfDoc);
        }

        // Inicializar Turn.js con configuraciones corregidas
        $(".flipbook").turn({
          width: 800,  // Ancho del flipbook
          height: 600, // Alto del flipbook
          autoCenter: true,
          display: "double", // Mostrar p√°ginas en pares
        });

        // Botones de navegaci√≥n
        document.getElementById("prev-page").addEventListener("click", function () {
          $(".flipbook").turn("previous");
        });

        document.getElementById("next-page").addEventListener("click", function () {
          $(".flipbook").turn("next");
        });
      });

      function renderPage(pageNumber, pdfDoc) {
        pdfDoc.getPage(pageNumber).then(function(page) {
          var canvas = document.getElementById("page-" + pageNumber);
          var ctx = canvas.getContext("2d");
          var viewport = page.getViewport({ scale: 2 });

          canvas.width = viewport.width;
          canvas.height = viewport.height;

          var renderContext = {
            canvasContext: ctx,
            viewport: viewport,
          };
          page.render(renderContext);
        });
      }
    });
  </script>

  <style>
    /* Contenedor Principal */
    .pdf-flipbook-container {
      text-align: center;
      margin: 20px auto;
      max-width: 850px;
    }

    /* Estilos del Flipbook */
    .flipbook {
      width: 800px;
      height: 600px;
      margin: auto;
      border: 1px solid #ddd;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .flip-page {
      width: 400px; /* Tama√±o de cada p√°gina */
      height: 600px;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Botones de navegaci√≥n */
    .flipbook-controls {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 15px;
    }

    .flipbook-btn {
      background: #ff4c4c;
      color: white;
      padding: 10px 15px;
      border: none;
      cursor: pointer;
      font-size: 14px;
      font-weight: bold;
      border-radius: 5px;
    }

    .flipbook-btn:hover {
      background: #e43b3b;
    }

    /* Bot√≥n de descarga */
    .download-btn {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
    }

    .download-btn:hover {
      background-color: #218838;
    }

    /* Ajustes Responsivos */
    @media (max-width: 768px) {
      .flipbook {
        width: 100%;
        height: auto;
      }

      .flip-page {
        width: 100%;
        height: auto;
      }
    }
  </style>

{% else %}
  <p>No hay cat√°logo disponible.</p>
{% endif %}
