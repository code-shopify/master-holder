<!-- ğŸ“Œ Cargar FlowPaper desde CDN -->
<script type="text/javascript" src="https://flowpaper.com/js/FlowPaperViewer_min.js"></script>

<!-- ğŸ“Œ Script para inicializar FlowPaper -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    const pdfUrl = "{{ pdf_url }}";

    if (!pdfUrl) {
        console.error("âŒ No se encontrÃ³ la URL del PDF.");
        document.getElementById("documentViewer").innerHTML = "<p style='color: red;'>âš  No hay catÃ¡logo disponible.</p>";
        return;
    }

    $("#documentViewer").FlowPaperViewer({
        config: {
            PDFFile: pdfUrl,
            Scale: 1,
            FitPageOnLoad: true,
            AutoAdjustPrintSize: true,
            ViewerWidth: "100%",
            ViewerHeight: "600px",
            enableSearch: true,
            enableDownload: false,
            BackgroundColor: "#ffffff" // ğŸ”¹ Forzar fondo blanco
        }
    });

    // Asegurar que el fondo del visor sea blanco
    setTimeout(() => {
        document.querySelector(".flowpaper-viewer").style.background = "#ffffff";
        document.querySelector("#documentViewer").style.background = "#ffffff";
    }, 2000);
});
</script>

