<div class="flipbook-container">
  <div id="flipbook"></div>

  <div class="flipbook-controls">
    <button id="prevPage">‚¨Ö Anterior</button>
    <span id="pageInfo">P√°gina <span id="currentPage">1</span> de <span id="totalPages">?</span></span>
    <button id="nextPage">Siguiente ‚û°</button>
  </div>

  {% if page.metafields.custom.cat_logo_pdf != blank %}
    <a class="download-btn" href="{{ page.metafields.custom.cat_logo_pdf | file_url }}" download>üì• Descargar PDF</a>
  {% endif %}
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/3d-flip-book@1.0.0/dist/flipbook.min.js"></script>

<script>
jQuery(document).ready(function ($) {
    var url = "{{ page.metafields.custom.cat_logo_pdf | file_url }}";

    if (!url) {
        document.getElementById("flipbook").innerHTML = "No hay cat√°logo disponible.";
        return;
    }

    $("#flipbook").flipBook({
        pdfUrl: url,
        lightbox: false,
        pageSize: "small",
        pageWidth: 400,
        pageHeight: 600,
        onPageChange: function (pageNum, totalPages) {
            document.getElementById("currentPage").textContent = pageNum;
            document.getElementById("totalPages").textContent = totalPages;
        },
    });

    document.getElementById("prevPage").addEventListener("click", function () {
        $("#flipbook").flipBook("prevPage");
    });

    document.getElementById("nextPage").addEventListener("click", function () {
        $("#flipbook").flipBook("nextPage");
    });
});
</script>

