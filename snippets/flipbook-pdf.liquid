{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url | prepend: "https:" %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- Contenedor del Flipbook -->
<div class="flipbook-wrapper">
  <div class="flipbook-container">
    {% if pdf_url != "" %}
      <iframe id="flipbook" src="https://flowpaper.com/flipbook/?pdf={{ pdf_url }}" frameborder="0"></iframe>
    {% else %}
      <p class="error-message">‚ö† No se encontr√≥ ning√∫n PDF. Verifica el metafield en Shopify.</p>
    {% endif %}

    <!-- Bot√≥n de descarga -->
    {% if pdf_url != "" %}
      <a class="download-btn" href="{{ pdf_url }}" download>üì• Descargar PDF</a>
    {% endif %}
  </div>
</div>

<!-- Forzar fondo blanco con JavaScript -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    setTimeout(() => {
        let flipbookIframe = document.getElementById("flipbook");
        if (flipbookIframe) {
            flipbookIframe.style.background = "#ffffff"; // Forzar fondo blanco
        }
        console.log("‚úÖ Fondo blanco aplicado al flipbook.");
    }, 1000);
});
</script>

<style>
/* Fondo blanco en toda la secci√≥n */
.flipbook-wrapper {
  width: 100%;
  background: #ffffff; /* Fondo blanco global */
  padding: 40px 0;
  display: flex;
  justify-content: center;
}

/* Contenedor del flipbook */
.flipbook-container {
  width: 100%;
  max-width: 900px;
  text-align: center;
  background: #ffffff; /* Fondo blanco */
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
  position: relative;
}

/* Ajustes del iframe */
#flipbook {
  width: 100% !important;
  max-width: 800px;
  height: 600px;
  margin: auto;
  border: none;
  display: block;
}

/* Bot√≥n de descarga */
.download-btn {
  display: inline-block;
  margin-top: 15px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}

/* Mensaje de error */
.error-message {
  color: red;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
}
</style>
