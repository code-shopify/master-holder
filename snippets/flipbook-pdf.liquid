{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- Contenedor del Flipbook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="flipbook" class="dflip" source="{{ pdf_url }}"></div>
  {% else %}
    <p style="color: red;">‚ö† No se encontr√≥ ning√∫n PDF. Verifica el metafield en Shopify.</p>
  {% endif %}

  <!-- Botones de navegaci√≥n -->
  <div class="flipbook-controls">
    <button id="prevPage">‚¨Ö Anterior</button>
    <span id="pageInfo">P√°gina <span id="currentPage">1</span> de <span id="totalPages">?</span></span>
    <button id="nextPage">Siguiente ‚û°</button>
  </div>

  <!-- Bot√≥n de descarga -->
  {% if pdf_url != "" %}
    <a class="download-btn" href="{{ pdf_url }}" download>üì• Descargar PDF</a>
  {% endif %}
</div>

<!-- Cargar CSS y JS de DearFlip -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/dearflip@1.0.0/css/dflip.min.css">
<script src="https://cdn.jsdelivr.net/npm/dearflip@1.0.0/js/dflip.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const pdfUrl = "{{ pdf_url }}";

  console.log("üîç Verificando PDF URL:", pdfUrl);

  if (!pdfUrl || pdfUrl === "") {
    console.error("‚ùå No se encontr√≥ un PDF en Shopify.");
    return;
  }

  console.log("‚úÖ Cargando PDF desde:", pdfUrl);

  // Crear el Flipbook con DearFlip
  const flipbook = new DFLIP({
    source: pdfUrl,
    webgl: true,
    controls: {
      autoHide: false,
      enableSideNavigation: true,
    }
  });

  flipbook.render(document.getElementById("flipbook"));

  // Actualizar n√∫mero de p√°gina al navegar
  flipbook.on("pageChange", function (event) {
    document.getElementById("currentPage").textContent = event.page;
  });

  // Botones de navegaci√≥n
  document.getElementById("prevPage").addEventListener("click", function () {
    flipbook.prev();
  });

  document.getElementById("nextPage").addEventListener("click", function () {
    flipbook.next();
  });
});
</script>

<style>
/* Contenedor principal */
.flipbook-container {
  width: 100%;
  max-width: 900px;
  margin: 20px auto;
  text-align: center;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* Ajuste del Flipbook */
#flipbook {
  width: 100% !important;
  max-width: 800px;
  height: 600px;
  margin: 0 auto;
}

/* Botones de navegaci√≥n */
.flipbook-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
}

.flipbook-controls button {
  background: #ff4c4c;
  color: white;
  border: none;
  padding: 8px 15px;
  font-size: 14px;
  border-radius: 5px;
  cursor: pointer;
}

.flipbook-controls button:hover {
  background: #cc0000;
}

/* Bot√≥n de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}
</style>
