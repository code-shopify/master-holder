{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- Contenedor del Flipbook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="flipbook"></div>
  {% else %}
    <p style="color: red;">‚ö† No se encontr√≥ ning√∫n PDF. Verifica el metafield en Shopify.</p>
  {% endif %}

  <!-- Bot√≥n de descarga -->
  {% if pdf_url != "" %}
    <a class="download-btn" href="{{ pdf_url }}" download>üì• Descargar PDF</a>
  {% endif %}
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const pdfUrl = "{{ pdf_url }}";

  console.log("üîç Verificando PDF URL:", pdfUrl);

  if (!pdfUrl || pdfUrl === "") {
    console.error("‚ùå No se encontr√≥ un PDF en Shopify.");
    return;
  }

  console.log("‚úÖ Cargando PDF desde:", pdfUrl);

  // Inicializar FlowPaper
  $("#flipbook").FlowPaperViewer({
    config: {
      PDFFile: pdfUrl,
      Scale: 1,
      ZoomTransition: "easeOut",
      ZoomTime: 0.5,
      FitPageOnLoad: true,
      FitWidthOnLoad: true,
      AutoAdjustLayout: true,
      PrintEnabled: true
    }
  });
});
</script>

<style>
/* Contenedor principal */
.flipbook-container {
  width: 100%;
  max-width: 900px;
  margin: 20px auto;
  text-align: center;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* Ajuste del Flipbook */
#flipbook {
  width: 100% !important;
  max-width: 800px;
  height: 600px;
  margin: 0 auto;
  border: 1px solid #ccc;
}

/* Bot√≥n de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}
</style>
