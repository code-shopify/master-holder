<div class="flipbook-container">
  <!-- Contenedor del flipbook -->
  <div id="flipbook"></div>

  <!-- Botones de navegaci√≥n -->
  <div class="flipbook-controls">
    <button id="prevPage">‚¨Ö Anterior</button>
    <span id="pageInfo">P√°gina <span id="currentPage">1</span> de <span id="totalPages">?</span></span>
    <button id="nextPage">Siguiente ‚û°</button>
  </div>

  <!-- Bot√≥n de descarga -->
  {% if page.metafields.custom.cat_logo_pdf != blank %}
    <a class="download-btn" href="{{ page.metafields.custom.cat_logo_pdf | file_url }}" download>üì• Descargar PDF</a>
  {% endif %}
</div>

<!-- Cargar jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Cargar Turn.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/turn.js/4.1.0/turn.min.js"></script>

<!-- Cargar PDF.js para renderizar el PDF -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

<script>
jQuery(document).ready(function ($) {
    var url = "{{ page.metafields.custom.cat_logo_pdf | file_url }}";

    if (!url) {
        document.getElementById("flipbook").innerHTML = "No hay cat√°logo disponible.";
        return;
    }

    // Inicializar el flipbook con Turn.js
    $("#flipbook").turn({
        width: 800,
        height: 600,
        autoCenter: true, // Centrar el flipbook
        duration: 1000,   // Duraci√≥n de la animaci√≥n en milisegundos
    });

    // Cargar el PDF y renderizar las p√°ginas
    pdfjsLib.getDocument(url).promise.then(function (pdf) {
        var totalPages = pdf.numPages;
        document.getElementById("totalPages").textContent = totalPages;

        for (let i = 1; i <= totalPages; i++) {
            pdf.getPage(i).then(function (page) {
                var canvas = document.createElement("canvas");
                var pageDiv = document.createElement("div");
                pageDiv.classList.add("page");
                pageDiv.appendChild(canvas);
                document.getElementById("flipbook").appendChild(pageDiv);

                var viewport = page.getViewport({ scale: 1.5 });
                canvas.height = viewport.height;
                canvas.width = viewport.width;

                // Renderizar la p√°gina del PDF en el canvas
                page.render({ canvasContext: canvas.getContext("2d"), viewport });
            });
        }
    }).catch(function (error) {
        console.error("Error al cargar el PDF:", error);
        document.getElementById("flipbook").innerHTML = "Error al cargar el cat√°logo.";
    });

    // Navegaci√≥n manual
    document.getElementById("prevPage").addEventListener("click", function () {
        $("#flipbook").turn("previous");
    });

    document.getElementById("nextPage").addEventListener("click", function () {
        $("#flipbook").turn("next");
    });

    // Actualizar el n√∫mero de p√°gina actual
    $("#flipbook").bind("turned", function (event, page) {
        document.getElementById("currentPage").textContent = page;
    });
});
</script>

