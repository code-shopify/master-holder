{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- üìå Contenedor del FlipBook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="documentViewer" class="flowpaper-viewer"></div>

    <div class="flipbook-controls">
      <button id="prevPage">‚¨Ö Anterior</button>
      <button id="nextPage">Siguiente ‚û°</button>
    </div>
    <a class="download-btn" href="{{ pdf_url }}" download>üì• Descargar PDF</a>
  {% else %}
    <p class="error-message">‚ö† No se encontr√≥ ning√∫n PDF. Verifica el metafield en Shopify.</p>
  {% endif %}
</div>

<!-- üìå Cargar librer√≠as de FlowPaper -->
<script src="https://flowpaper.com/js/FlowPaperViewer.js"></script>

<!-- üìå Script para inicializar FlowPaper y personalizar el fondo -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    const url = "{{ pdf_url }}";

    if (!url) {
        console.error("‚ùå No se encontr√≥ la URL del PDF.");
        document.getElementById("documentViewer").innerHTML = "<p style='color: red;'>‚ö† No hay cat√°logo disponible.</p>";
        return;
    }

    // Iniciar el visor de FlowPaper
    $('#documentViewer').FlowPaperViewer({
        config: {
            PDFFile: url,
            Scale: 1,
            FitPageOnLoad: true,
            AutoAdjustPrintSize: true,
            ViewerWidth: "100%",
            ViewerHeight: "600px",
            enableSearch: true,
            enableDownload: false,
            BackgroundColor: "#ffffff" // Asegurar fondo blanco
        }
    });

    // Aplicar fondo blanco al wrapper
    setTimeout(() => {
        document.querySelector(".flowpaper-viewer").style.background = "#ffffff";
        document.querySelector("#documentViewer").style.background = "#ffffff";
    }, 1000);
});
</script>

<!-- üìå Estilos para asegurar fondo blanco y dise√±o limpio -->
<style>
/* üìå Contenedor principal */
.flipbook-container {
  width: 100%;
  max-width: 900px;
  margin: auto;
  text-align: center;
  position: relative;
  background: #ffffff; /* Fondo blanco */
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* üìå FlowPaper */
.flowpaper-viewer {
  width: 100% !important;
  height: 600px !important;
  background: #ffffff !important; /* Asegura fondo blanco */
}

/* üìå Controles de navegaci√≥n */
.flipbook-controls {
  display: flex;
