.flipbook-container {
  width: 100%;
  max-width: 900px;
  margin: 20px auto;
  text-align: center;
  background: #ffffff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* Ajuste del FlipBook */
#flipbook {
  width: 100% !important;
  max-width: 800px;
  height: 600px;
  margin: 0 auto;
  border: none;
  background: #ffffff;
}

/* Estilos para las p√°ginas */
.page {
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Botones de navegaci√≥n */
.flipbook-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
}

.flipbook-controls button {
  background: #ff4c4c;
  color: white;
  border: none;
  padding: 8px 15px;
  font-size: 14px;
  border-radius: 5px;
  cursor: pointer;
}

