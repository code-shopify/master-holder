{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- 📌 Cargar PDF.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

<!-- 📌 Contenedor del FlipBook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="flipbook"></div>
  {% else %}
    <p class="error-message">⚠ No se encontró ningún PDF. Verifica el metafield en Shopify.</p>
  {% endif %}
</div>

<!-- 📌 Script para Renderizar PDF como FlipBook -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    const url = "{{ pdf_url }}";

    if (!url) {
        console.error("❌ No se encontró la URL del PDF.");
        document.getElementById("flipbook").innerHTML = "<p style='color: red;'>⚠ No hay catálogo disponible.</p>";
        return;
    }

    const flipbookContainer = document.getElementById("flipbook");

    pdfjsLib.getDocument(url).promise.then(pdf => {
        const totalPages = pdf.numPages;
        console.log("📂 Total de páginas en el PDF:", totalPages);

        for (let i = 1; i <= totalPages; i++) {
            pdf.getPage(i).then(page => {
                const canvas = document.createElement("canvas");
                const pageDiv = document.createElement("div");
                pageDiv.classList.add("page");
                pageDiv.appendChild(canvas);
                flipbookContainer.appendChild(pageDiv);

                const viewport = page.getViewport({ scale: 1.5 });
                canvas.width = viewport.width;
                canvas.height = viewport.height;

                page.render({ canvasContext: canvas.getContext("2d"), viewport });
            });
        }
    }).catch(error => {
        console.error("❌ Error al cargar el PDF:", error);
        flipbookContainer.innerHTML = "<p style='color: red;'>⚠ Error al cargar el catálogo.</p>";
    });
});
</script>

<!-- 📌 Estilos del FlipBook -->
<style>
/* 📌 Contenedor principal */
.flipbook-container {
  width: 90%;
  max-width: 800px;
  margin: auto;
  text-align: center;
  position: relative;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* 📌 Páginas del FlipBook */
.page {
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  padding: 5px;
  transition: transform 0.8s ease-in-out;
}

/* 📌 Animación de Flip */
.page:nth-child(odd) {
  transform-origin: left;
  transform: rotateY(0deg);
}

.page:nth-child(even) {
  transform-origin: right;
  transform: rotateY(-180deg);
}

/* 📌 Botón de error */
.error-message {
  color: red;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
}
</style>
