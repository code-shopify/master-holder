{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- üìå Cargar jQuery antes de FlowPaper -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- üìå Cargar FlowPaper -->
<script type="text/javascript" src="https://flowpaper.com/js/FlowPaperViewer.js"></script>

<!-- üìå Contenedor del visor -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="documentViewer" class="flowpaper-viewer"></div>

    <div class="flipbook-controls">
      <button id="prevPage">‚¨Ö Anterior</button>
      <button id="nextPage">Siguiente ‚û°</button>
    </div>
    <a class="download-btn" href="{{ pdf_url }}" download>üì• Descargar PDF</a>
  {% else %}
    <p class="error-message">‚ö† No se encontr√≥ ning√∫n PDF. Verifica el metafield en Shopify.</p>
  {% endif %}
</div>

<!-- üìå Script para inicializar FlowPaper -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    console.log("‚úÖ Intentando cargar FlowPaper...");
    const pdfUrl = "{{ pdf_url }}";

    if (!pdfUrl) {
        console.error("‚ùå No se encontr√≥ la URL del PDF.");
        document.getElementById("documentViewer").innerHTML = "<p style='color: red;'>‚ö† No hay cat√°logo disponible.</p>";
        return;
    }

    setTimeout(() => {
        if (typeof $.fn.FlowPaperViewer === "undefined") {
            console.error("‚ùå FlowPaper no se carg√≥ correctamente. Revisa la URL del CDN.");
            return;
        }

        $("#documentViewer").FlowPaperViewer({
            config: {
                PDFFile: pdfUrl,
                Scale: 1,
                FitPageOnLoad: true,
                AutoAdjustPrintSize: true,
                ViewerWidth: "100%",
                ViewerHeight: "600px",
                enableSearch: true,
                enableDownload: false,
                BackgroundColor: "#ffffff" // üîπ Fondo blanco
            }
        });

        console.log("‚úÖ FlowPaper cargado correctamente.");
    }, 1000);

    // üîπ Asegurar fondo blanco en el visor
    setTimeout(() => {
        document.querySelector(".flowpaper-viewer").style.background = "#ffffff";
        document.querySelector("#documentViewer").style.background = "#ffffff";
        console.log("‚úÖ Fondo blanco aplicado correctamente.");
    }, 2000);
});
</script>

<!-- üìå Estilos -->
<style>
/* üìå Contenedor principal */
.flipbook-container {
  width: 100%;
  max-width: 900px;
  margin: auto;
  text-align: center;
  background: #ffffff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

/* üìå FlowPaper */
.flowpaper-viewer {
  width: 100% !important;
  height: 600px !important;
  background: #ffffff !important;
}

/* üìå Controles de navegaci√≥n */
.flipbook-controls {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
}

.flipbook-controls button {
  background: #ff4c4c;
  color: white;
  border: none;
  padding: 8px 15px;
  font-size: 14px;
  border-radius: 5px;
  cursor: pointer;
}

.flipbook-controls button:hover {
  background: #cc0000;
}

/* üìå Bot√≥n de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}

/* üìå Mensaje de error */
.error-message {
  color: red;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
}
</style>
