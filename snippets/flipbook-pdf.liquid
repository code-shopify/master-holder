{%- assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url -%}

{% if pdf_url != blank %}
  <div class="pdf-flipbook-container">
    <div id="pdf-flipbook">
      <div class="flipbook">
        <!-- Las páginas del PDF se insertarán aquí dinámicamente -->
      </div>
    </div>

    <!-- Controles de navegación -->
    <div class="flipbook-controls">
      <button id="prev-page" class="flipbook-btn">⏪ Anterior</button>
      <button id="next-page" class="flipbook-btn">⏩ Siguiente</button>
    </div>

    <!-- Botón de descarga -->
    <a href="{{ pdf_url }}" download="catalogo.pdf" class="download-btn">Descargar PDF</a>
  </div>

  <!-- Librerías necesarias -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.14.305/pdf.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/turn.js/4/turn.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var url = "{{ pdf_url }}";

      if (!url || url === "undefined") {
        console.error("⚠️ No se encontró el archivo PDF en el metacampo.");
        return;
      }

      var flipbook = document.querySelector(".flipbook");

      pdfjsLib.getDocument(url).promise.then(function(pdfDoc) {
        var totalPages = pdfDoc.numPages;

        for (let i = 1; i <= totalPages; i++) {
          let pageDiv = document.createElement("div");
          pageDiv.classList.add("flip-page");
          pageDiv.innerHTML = `<canvas id="page-${i}"></canvas>`;
          flipbook.appendChild(pageDiv);
        }

        for (let i = 1; i <= totalPages; i++) {
          renderPage(i, pdfDoc);
        }

        // Inicializar Turn.js
        $(".flipbook").turn({
          width: 600,
          height: 400,
          autoCenter: true,
        });

        // Botones de navegación
        document.getElementById("prev-page").addEventListener("click", function () {
          $(".flipbook").turn("previous");
        });

        document.getElementById("next-page").addEventListener("click", function () {
          $(".flipbook").turn("next");
        });
      });

      function renderPage(pageNumber, pdfDoc) {
        pdfDoc.getPage(pageNumber).then(function(page) {
          var canvas = document.getElementById("page-" + pageNumber);
          var ctx = canvas.getContext("2d");
          var viewport = page.getViewport({ scale: 1.5 });

          canvas.width = viewport.width;
          canvas.height = viewport.height;

          var renderContext = {
            canvasContext: ctx,
            viewport: viewport,
          };
          page.render(renderContext);
        });
      }
    });
  </script>

  <style>
    .pdf-flipbook-container {
      text-align: center;
      margin: 20px auto;
      max-width: 650px;
    }

    .flipbook {
      width: 600px;
      height: 400px;
      margin: auto;
    }

    .flip-page {
      width: 600px;
      height: 400px;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid #ccc;
    }

    .flipbook-btn {
      background: #ff4c4c;
      color: white;
      padding: 10px;
      margin: 10px;
      border: none;
      cursor: pointer;
      font-size: 14px;
      font-weight: bold;
      border-radius: 5px;
    }

    .flipbook-btn:hover {
      background: #e43b3b;
    }

    .download-btn {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
    }

    .download-btn:hover {
      background-color: #218838;
    }
  </style>
{% else %}
  <p>No hay catálogo disponible.</p>
{% endif %}
