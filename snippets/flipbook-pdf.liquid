{% if page.metafields.custom.cat_logo_pdf != blank %}
  {% assign pdf_url = page.metafields.custom.cat_logo_pdf | file_url %}
{% else %}
  {% assign pdf_url = "" %}
{% endif %}

<!-- 📌 Cargar PDF.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

<!-- 📌 Contenedor del FlipBook -->
<div class="flipbook-container">
  {% if pdf_url != "" %}
    <div id="flipbook">
      <div class="flip-page" id="page1">
        <canvas id="pdf-canvas"></canvas>
      </div>
      <div class="flip-page" id="page2"></div>
    </div>
    <div class="flipbook-controls">
      <button id="prevPage">⬅ Anterior</button>
      <span id="pageInfo">Página <span id="currentPage">1</span> de <span id="totalPages">?</span></span>
      <button id="nextPage">Siguiente ➡</button>
    </div>
    <a class="download-btn" href="{{ pdf_url }}" download>📥 Descargar PDF</a>
  {% else %}
    <p class="error-message">⚠ No se encontró ningún PDF. Verifica el metafield en Shopify.</p>
  {% endif %}
</div>

<!-- 📌 Script para Renderizar PDF con Efecto FlipBook -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    const url = "{{ pdf_url }}";
    const canvas = document.getElementById("pdf-canvas");
    const ctx = canvas.getContext("2d");
    let pdfDoc = null;
    let currentPage = 1;
    let totalPages = 0;
    let scale = 1.5;

    if (!url) {
        console.error("❌ No se encontró la URL del PDF.");
        document.getElementById("flipbook").innerHTML = "<p style='color: red;'>⚠ No hay catálogo disponible.</p>";
        return;
    }

    pdfjsLib.getDocument(url).promise.then(pdf => {
        pdfDoc = pdf;
        totalPages = pdf.numPages;
        document.getElementById("totalPages").textContent = totalPages;
        renderPage(currentPage);
    });

    function renderPage(num) {
        pdfDoc.getPage(num).then(page => {
            const viewport = page.getViewport({ scale: scale });
            canvas.width = viewport.width;
            canvas.height = viewport.height;

            const renderContext = {
                canvasContext: ctx,
                viewport: viewport
            };
            page.render(renderContext);
        });

        document.getElementById("currentPage").textContent = num;
        applyFlipEffect();
    }

    function applyFlipEffect() {
        const flipbook = document.getElementById("flipbook");
        flipbook.classList.remove("flip-animation");
        void flipbook.offsetWidth;  // Reinicia la animación
        flipbook.classList.add("flip-animation");
    }

    document.getElementById("prevPage").addEventListener("click", function () {
        if (currentPage > 1) {
            currentPage--;
            renderPage(currentPage);
        }
    });

    document.getElementById("nextPage").addEventListener("click", function () {
        if (currentPage < totalPages) {
            currentPage++;
            renderPage(currentPage);
        }
    });
});
</script>

<!-- 📌 Estilos para FlipBook -->
<style>
/* 📌 Contenedor principal */
.flipbook-container {
  width: 90%;
  max-width: 800px;
  margin: auto;
  text-align: center;
  position: relative;
  background: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* 📌 Efecto FlipBook */
#flipbook {
  position: relative;
  width: 100%;
  height: auto;
  perspective: 1000px;
}

/* 📌 Página */
.flip-page {
  width: 100%;
  height: auto;
  position: absolute;
  backface-visibility: hidden;
}

/* 📌 Animación de pasar página */
.flip-animation {
  animation: flip 0.6s ease-in-out;
}

@keyframes flip {
  0% { transform: rotateY(0deg); }
  50% { transform: rotateY(90deg); }
  100% { transform: rotateY(0deg); }
}

/* 📌 Canvas para renderizar el PDF */
#pdf-canvas {
  width: 100%;
  height: auto;
  display: block;
  margin: auto;
}

/* 📌 Controles de navegación */
.flipbook-controls {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
}

.flipbook-controls button {
  background: #ff4c4c;
  color: white;
  border: none;
  padding: 8px 15px;
  font-size: 14px;
  border-radius: 5px;
  cursor: pointer;
}

.flipbook-controls button:hover {
  background: #cc0000;
}

/* 📌 Botón de descarga */
.download-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 10px 15px;
  background: #28a745;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
}

.download-btn:hover {
  background: #218838;
}

/* 📌 Mensaje de error */
.error-message {
  color: red;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
}
</style>
