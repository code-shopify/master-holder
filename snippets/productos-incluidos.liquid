{%- if product.metafields.custom.inlcuye.value == blank -%}{%- continue -%}{% endif -%}

<div class="t4s-complimentary">
  <h3 class="t4s-complimentary-title">{{ block.settings.text | default: "Tu compra incluye" }}</h3>
  <div class="t4s-included-wrapper">
    {%- for item in product.metafields.custom.inlcuye.value -%}
      {% if forloop.index > 1 %}
        <div class="plus-symbol">+</div>
      {% endif %}
      <div class="complimentary-card">
        <a href="{{ item.url }}" class="card-link">
          <div class="card-image">
            <img
              src="{{ item.featured_image | image_url: width: 300 }}"
              alt="{{ item.title }}"
              loading="lazy"
            >
            <span class="incluido-badge">Incluido</span>
          </div>
          <div class="card-info">
            <p class="product-title">{{ item.title }}</p>
            <p class="product-price">
              <span>{{ item.compare_at_price | default: item.price | money }}</span>
            </p>
          </div>
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>

<style>
  .t4s-complimentary {
    margin-top: 2rem;
    text-align: center;
  }

  .t4s-complimentary-title {
    font-size: 1.6rem;
    margin-bottom: 1.5rem;
  }

  .t4s-included-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  .complimentary-card {
    width: 160px;
    min-height: 260px;
    background: #fff;
    border: 1px solid #eee;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-shrink: 0;
    text-align: center;
  }

  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    position: relative;
  }

  .card-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .incluido-badge {
    position: absolute;
    top: 8px;
    left: 8px;
    background-color: #e0f0ff;
    color: #007ace;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 3px 8px;
    border-radius: 12px;
    text-transform: uppercase;
  }

  .card-info {
    padding: 12px 8px 14px;
  }

  .product-title {
    font-size: 0.95rem;
    font-weight: 600;
    margin-bottom: 6px;
  }

  .product-price span {
    text-decoration: line-through;
    color: #007ace;
    font-size: 1rem;
    font-weight: 600;
  }

  .plus-symbol {
    font-size: 2rem;
    font-weight: bold;
    color: #007ace;
    margin: 0 6px;
  }

  @media (max-width: 768px) {
    .t4s-included-wrapper {
      overflow-x: auto;
      flex-wrap: nowrap;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
    }

    .complimentary-card,
    .plus-symbol {
      scroll-snap-align: center;
    }
  }
</style>
