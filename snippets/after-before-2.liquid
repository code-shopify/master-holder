{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<div class="before-after-container">
      <figure>
        <div class="before-image" id="before_after_{{ product.id }}"></div>
      </figure>
      <input 
        type="range" 
        min="0" 
        max="100" 
        value="50" 
        id="before_after_slider_{{ product.id }}"
        oninput="beforeAfter('{{ product.id }}')" 
        onchange="beforeAfter('{{ product.id }}')"
      />
    </div>

<style>
/* 🔹 Contenedor del comparador */
.before-after-container {
  position: relative;
  width: 100%;
  aspect-ratio: 1 / 1; /* Ajusta según el aspecto de tus imágenes */
  background: #1f1f1c;
  overflow: hidden;
}

/* 🔹 Imagen de fondo (AFTER) */
.before-after-container figure {
  background-image: url({{ after_image }});
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 100%;
  margin: 0;
  position: relative;
}

/* 🔹 Imagen superpuesta (BEFORE) */
.before-image {
  background-image: url({{ before_image }});
  background-size: cover;
  background-position: center;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 50%; /* Comienza en 50% */
  border-right: 4px solid rgba(255, 255, 255, 0.7);
  transition: width 0.1s linear;
}

/* 🔹 Estilos del slider */
input[type="range"] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: transparent;
  cursor: col-resize;
  z-index: 10;
}

/* 🔹 Thumb (control del slider) */
input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  width: 10px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  cursor: col-resize;
}

input[type="range"]::-moz-range-thumb {
  width: 10px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  cursor: col-resize;
}

input[type="range"]::-ms-thumb {
  width: 10px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  cursor: col-resize;
}

/* 🔹 Línea central visible */
.before-image::before {
  content: "";
  position: absolute;
  top: 0;
  right: -5px;
  width: 10px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  z-index: 99;
}

/* 🔹 Ajustes móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
}
</style>

<script>
/* 🔹 Función para actualizar la comparación */
function beforeAfter(productId) {
    let slider = document.getElementById("before_after_slider_" + productId);
    let beforeDiv = document.getElementById("before_after_" + productId);
    
    if (slider && beforeDiv) {
        beforeDiv.style.width = slider.value + "%";
    }
}

/* 🔹 Animación inicial */
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("[id^='before_after_']").forEach(el => {
        setTimeout(() => {
            el.style.width = "50%";
        }, 300);
    });

    // 🔹 Hacer que el slider funcione
    document.querySelectorAll("input[type='range']").forEach(input => {
        input.addEventListener("input", function() {
            let productId = this.id.replace("before_after_slider_", "");
            beforeAfter(productId);
        });
    });
});
</script>
{% endif %}
