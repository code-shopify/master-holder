{% comment %}
  Popup para mostrar la comparación de productos
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
<div class="popup-comparador-content">
  <div class="popup-comparador-header">
    <h2>{{ 'compare_popup.title' | t }}</h2>
    <button type="button" class="popup-comparador__close" aria-label="{{ 'compare_popup.close' | t }}">×</button>
  </div>
  
  <div class="popup-comparador-body">
    <div class="popup-comparador-before-after">
      <div class="before-after-container">
        <figure>
          <div class="before-image" id="before_after_{{ product.id }}"></div>
        </figure>
        <input 
          type="range" 
          min="0" 
          max="100" 
          value="50" 
          id="before_after_slider_{{ product.id }}"
          oninput="beforeAfter('{{ product.id }}')" 
          onchange="beforeAfter('{{ product.id }}')"
        />
      </div>
    </div>
  </div>
</div>

<style>
/* 🔹 Estilos generales del popup */
.popup-comparador-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  margin: 20px auto;
  position: relative;
  border-radius: 8px;
}

.popup-comparador-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.popup-comparador-header h2 {
  margin: 0;
  font-size: 24px;
}

.popup-comparador__close {
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px 10px;
}

.popup-comparador-body {
  width: 100%;
}

.popup-comparador-before-after {
  width: 100%;
  margin: 0 auto;
}

/* 🔹 Estilos del comparador */
.before-after-container {
  aspect-ratio: 1 / 1;
  background: #1f1f1c;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.before-after-container figure {
  background-image: url({{ after_image }});
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

/* 🔹 Imagen superpuesta */
.before-image {
  background-image: url({{ before_image }});
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 50%;
  transition: width 0.1s linear;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
}

/* 🔹 Estilos del slider */
input[type="range"] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  cursor: col-resize;
  z-index: 10;
}

/* 🔹 Track del slider (invisible) */
input[type="range"]::-webkit-slider-runnable-track {
  width: 100%;
  height: 100%;
  background: transparent;
}

input[type="range"]::-moz-range-track {
  width: 100%;
  height: 100%;
  background: transparent;
}

/* 🔹 Thumb del slider (visible) */
input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  width: 15px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  cursor: col-resize;
  position: relative;
  z-index: 99999;
}

input[type="range"]::-moz-range-thumb {
  width: 15px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  cursor: col-resize;
}

input[type="range"]::-ms-thumb {
  width: 15px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  cursor: col-resize;
}

/* 🔹 Línea de separación central */
.before-image::before {
  content: "";
  position: absolute;
  top: 0;
  right: -7px;
  width: 15px;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  z-index: 99;
}

/* 🔹 Ajustes móviles */
@media (max-width: 767px) {
  .popup-comparador-content {
    padding: 15px;
    margin: 15px;
    width: calc(100% - 30px);
  }
  
  .popup-comparador-header h2 {
    font-size: 20px;
  }
}
</style>

<script>
/* 🔹 Función para actualizar el comparador */
function beforeAfter(productId) {
    let slider = document.getElementById("before_after_slider_" + productId);
    let beforeDiv = document.getElementById("before_after_" + productId);
    
    if (slider && beforeDiv) {
        beforeDiv.style.width = slider.value + "%";
    }
}

/* 🔹 Animación inicial */
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("[id^='before_after_']").forEach(el => {
        setTimeout(() => {
            el.style.width = "50%";
        }, 300);
    });

    // 🔹 Hacer que el slider funcione
    document.querySelectorAll("input[type='range']").forEach(input => {
        input.addEventListener("input", function() {
            let productId = this.id.replace("before_after_slider_", "");
            beforeAfter(productId);
        });
    });
});
</script>
{% endif %}
