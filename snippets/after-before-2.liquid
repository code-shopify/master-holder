{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

<style>
:root {
  --before-after-aspect-ratio: 1 / 1;
  --before-image: url({{ before_image }});
  --after-image: url({{ after_image }});
  --before-after-background-color: #1f1f1c;
}

.before-after-container {
  aspect-ratio: var(--before-after-aspect-ratio);
  background: var(--before-after-background-color);
  width: 100%;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
}

.before-after-container figure {
  background-image: var(--after-image);
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

#before_after-2 {
  background-image: var(--before-image);
  background-size: cover;
  bottom: 0;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
  max-width: 98.6%;
  min-width: 0.6%;
  overflow: visible;
  position: absolute;
  width: 50%;
  animation: first-2 2s 1 normal ease-in-out 0.1s;
  -webkit-animation: first-2 2s 1 normal ease-in-out 0.1s;
}

input#before_after_slider-2 {
  -moz-appearance: none;
  -webkit-appearance: none;
  border: none;
  background: transparent;
  cursor: col-resize;
  height: 100vw;
  left: 0;
  margin: 0;
  outline: none;
  padding: 0;
  position: relative;
  top: -100vw;
  width: 100%;
}

input#before_after_slider-2::-moz-range-track {
  background: transparent;
}

input#before_after_slider-2::-ms-track {
  border: none;
  background-color: transparent;
  height: 100vw;
  left: 0;
  top: -100vw;
  width: 100%;
  margin: 0;
  padding: 0;
  outline: none;
  position: relative;
  cursor: col-resize;
  color: transparent;
}

input#before_after_slider-2::-ms-fill-lower {
  background-color: transparent;
}

input#before_after_slider-2::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#before_after_slider-2::-moz-range-thumb {
  -moz-appearance: none;
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#before_after_slider-2::-ms-thumb {
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#before_after_slider-2::-ms-tooltip {
  display: none;
}

#before_after-2::before {
  background: url(https://assets.codepen.io/191814/comparision.png) no-repeat scroll 0 center transparent;
  background-size: contain;
  content: " ";
  float: right;
  height: 100%;
  margin-right: -34px;
  position: relative;
  top: 0;
  width: 64px;
}

@keyframes first-2 {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}

@-webkit-keyframes first-2 {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}
</style>

<div class="before-after-container">
  <figure>
    <div id="before_after-2"></div>
  </figure>
  <input oninput="beforeAfter2()" onchange="beforeAfter2()" type="range" min="0" max="100" value="50" id="before_after_slider-2" />
</div>

<script>
function beforeAfter2() {
  document.getElementById("before_after-2").style.width = 
    document.getElementById("before_after_slider-2").value + "%";
}
</script>

