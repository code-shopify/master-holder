{% comment %}
  Before & After Slider (Using Metafields for Dynamic Images)
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
  <div class="before-after-wrapper{% if popup %} is--popup{% endif %}" data-before-after-wrapper>
    <div class="before-after-container">
      <figure>
        <div class="after-image"></div>
        <div id="before_after_{{ product.id }}" class="before-image"></div>
      </figure>
      <input 
        type="range" 
        min="0" 
        max="100" 
        value="50" 
        id="before_after_slider_{{ product.id }}" 
        class="before-after-range"
      />
    </div>
  </div>

  <style>
    :root {
      --before-image: url({{ before_image }});
      --after-image: url({{ after_image }});
    }

    .before-after-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      background-color: #1f1f1c;
      touch-action: none;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease;
    }

    .before-after-wrapper.is--active {
      opacity: 1;
      visibility: visible;
    }

    /* Estilos espec√≠ficos para el popup */
    .before-after-wrapper.is--popup {
      position: relative;
      opacity: 1;
      visibility: visible;
      min-height: 500px;
      max-width: 800px;
      margin: 0 auto;
    }

    .t4s-before-after-popup {
      padding: 30px;
      background: #1f1f1c;
    }

    .before-after-container {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    .before-after-container figure {
      position: relative;
      margin: 0;
      width: 100%;
      height: 100%;
    }

    .after-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: var(--after-image);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .before-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background-image: var(--before-image);
      background-size: cover;
      background-position: left center;
      background-repeat: no-repeat;
      border-right: 5px solid rgba(255, 255, 255, 0.7);
      box-shadow: 10px 0 15px -13px #000;
      animation: first 2s 1 normal ease-in-out 0.1s;
      -webkit-animation: first 2s 1 normal ease-in-out 0.1s;
    }

    .before-image::before {
      content: "";
      position: absolute;
      right: -32px;
      top: 0;
      width: 64px;
      height: 100%;
      background: url(https://assets.codepen.io/191814/comparision.png) no-repeat center;
      background-size: contain;
    }

    .before-after-range {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: transparent;
      cursor: col-resize;
      margin: 0;
      outline: none;
      padding: 0;
      z-index: 20;
    }

    .before-after-range::-webkit-slider-thumb {
      -webkit-appearance: none;
      height: 100%;
      width: 0.5%;
      opacity: 0;
    }

    .before-after-range::-moz-range-thumb {
      -moz-appearance: none;
      height: 100%;
      width: 0.5%;
      opacity: 0;
    }

    .before-after-range::-ms-thumb {
      height: 100%;
      width: 0.5%;
      opacity: 0;
    }

    @keyframes first {
      0% { width: 0%; }
      50% { width: 80%; }
      100% { width: 50%; }
    }

    @-webkit-keyframes first {
      0% { width: 0%; }
      50% { width: 80%; }
      100% { width: 50%; }
    }

    /* Estilos para el popup */
    .t4s-mfp-wrap.t4s-popup-before-after .mfp-content {
      max-width: 1000px;
    }
  </style>
{% endif %}
