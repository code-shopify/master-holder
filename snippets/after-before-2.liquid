{% comment %}
  Before & After Slider
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
  <div class="before-after-container">
    <figure>
      <div id="before_after_{{ product.id }}" class="before-after"></div>
    </figure>
    <input 
      type="range" 
      min="0" 
      max="100" 
      value="50" 
      id="before_after_slider_{{ product.id }}" 
      class="before-after-slider"
      oninput="updateBeforeAfter(this)"
      onchange="updateBeforeAfter(this)"
    />
  </div>

  <style>
    .before-after-container {
      position: relative;
      width: 100%;
      height: 100%;
      background: #1f1f1c;
      overflow: hidden;
      touch-action: none;
      user-select: none;
      -webkit-user-select: none;
    }

    .before-after-container figure {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      margin: 0;
      background-image: url({{ after_image }});
      background-size: cover;
      background-position: center;
    }

    .before-after {
      position: absolute;
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background-image: url({{ before_image }});
      background-size: cover;
      background-position: center;
      border-right: 5px solid rgba(255, 255, 255, 0.7);
      box-shadow: 10px 0 15px -13px #000;
      animation: slider-init 2s ease-in-out;
      pointer-events: none;
      will-change: width;
    }

    .before-after::before {
      content: '';
      position: absolute;
      right: -20px;
      top: 50%;
      transform: translateY(-50%);
      width: 40px;
      height: 40px;
      background: url('https://assets.codepen.io/191814/comparision.png') no-repeat center;
      background-size: contain;
      pointer-events: none;
    }

    .before-after-slider {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: transparent;
      cursor: col-resize;
      margin: 0;
      padding: 0;
      z-index: 10;
      touch-action: none;
    }

    .before-after-slider:focus {
      outline: none;
    }

    .before-after-slider::-webkit-slider-thumb {
      -webkit-appearance: none;
      appearance: none;
      width: 40px;
      height: 100%;
      background: transparent;
      cursor: col-resize;
    }

    .before-after-slider::-moz-range-thumb {
      width: 40px;
      height: 100%;
      background: transparent;
      cursor: col-resize;
      border: none;
    }

    .before-after-slider::-ms-thumb {
      width: 40px;
      height: 100%;
      background: transparent;
      cursor: col-resize;
      border: none;
    }

    @keyframes slider-init {
      0% { width: 0%; }
      50% { width: 80%; }
      100% { width: 50%; }
    }
  </style>

  <script>
    function updateBeforeAfter(input) {
      const slider = document.getElementById("before_after_" + {{ product.id }});
      if (slider) {
        slider.style.width = input.value + "%";
      }
    }

    function initBeforeAfter(productId) {
      const slider = document.getElementById("before_after_" + productId);
      const range = document.getElementById("before_after_slider_" + productId);
      
      if (!slider || !range) return;

      // Prevenir eventos de scroll y otros comportamientos por defecto
      range.addEventListener('touchstart', function(e) {
        e.stopPropagation();
      }, { passive: false });

      range.addEventListener('touchmove', function(e) {
        e.stopPropagation();
      }, { passive: false });

      range.addEventListener('mousedown', function(e) {
        e.stopPropagation();
      }, { passive: false });

      // Valor inicial
      range.value = 50;
      slider.style.width = "50%";
    }

    // Inicializar cuando el DOM estÃ© listo
    document.addEventListener('DOMContentLoaded', function() {
      initBeforeAfter({{ product.id }});
    });

    // Reinicializar cuando el popup se abra
    document.addEventListener('popup:opened', function() {
      setTimeout(() => {
        initBeforeAfter({{ product.id }});
      }, 100);
    });
  </script>
{% endif %}
