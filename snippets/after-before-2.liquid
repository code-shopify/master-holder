{% comment %}
  Before & After Slider (Using Metafields for Dynamic Images)
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
  <div class="before-after-wrapper" data-before-after-wrapper>
    <div class="before-after-figure">
      <div class="before-after-image after-image"></div>
      <div id="before_after_{{ product.id }}" class="before-after-image before-image">
        <div class="handle"></div>
      </div>
    </div>
    <input 
      type="range" 
      min="0" 
      max="100" 
      value="50" 
      id="before_after_slider_{{ product.id }}" 
      class="before-after-range"
    />
  </div>

  <style>
    :root {
      --before-image: url({{ before_image }});
      --after-image: url({{ after_image }});
    }

    .before-after-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      background-color: #1f1f1c;
      touch-action: none;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease;
    }

    .before-after-wrapper.is--active {
      opacity: 1;
      visibility: visible;
    }

    .before-after-figure {
      position: relative;
      margin: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    .before-after-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .after-image {
      background-image: var(--after-image);
      z-index: 1;
    }

    .before-image {
      background-image: var(--before-image);
      z-index: 2;
      clip-path: inset(0 0 0 50%);
      transition: clip-path 0.1s ease-out;
    }

    .handle {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 5px;
      background: rgba(255, 255, 255, 0.7);
      transform: translateX(-50%);
      cursor: col-resize;
    }

    .handle::before {
      content: '';
      position: absolute;
      left: 50%;
      top: 50%;
      width: 40px;
      height: 40px;
      border: 3px solid rgba(255, 255, 255, 0.7);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      background: rgba(0, 0, 0, 0.5);
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }

    .handle::after {
      content: '';
      position: absolute;
      left: 50%;
      top: 50%;
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 6px 0 6px 6px;
      border-color: transparent transparent transparent rgba(255, 255, 255, 0.7);
      transform: translate(-50%, -50%);
    }

    .before-after-range {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: transparent;
      outline: none;
      border: none;
      padding: 0;
      margin: 0;
      cursor: col-resize;
      z-index: 20;
    }

    .before-after-range::-webkit-slider-thumb {
      -webkit-appearance: none;
      width: 40px;
      height: 100%;
      background: transparent;
      border: none;
      cursor: col-resize;
    }

    .before-after-range::-moz-range-thumb {
      width: 40px;
      height: 100%;
      background: transparent;
      border: none;
      cursor: col-resize;
    }

    .before-after-range::-ms-thumb {
      width: 40px;
      height: 100%;
      background: transparent;
      border: none;
      cursor: col-resize;
    }

    @keyframes first {
      0% { clip-path: inset(0 0 0 0); }
      50% { clip-path: inset(0 0 0 80%); }
      100% { clip-path: inset(0 0 0 50%); }
    }

    .before-image {
      animation: first 2s 1 normal ease-in-out 0.1s;
    }
  </style>
{% endif %}
