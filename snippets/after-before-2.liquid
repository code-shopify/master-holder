{% comment %}
  Before & After Slider for Shopify (Fixed with Slider Icon Adjustments)
  - Ensures the slider icon is correctly positioned and does not interfere with images.
{% endcomment %}

{% assign product_type = product.type | downcase %}

{% comment %} Configuración de imágenes según tipo de producto {% endcomment %}
{% case product_type %}
  {% when 'zapatos' %}
    {% assign before_image = 'zapatos-antes.jpg' | asset_url %}
    {% assign after_image = 'zapatos-despues.jpg' | asset_url %}
  {% when 'ropa' %}
    {% assign before_image = 'ropa-antes.jpg' | asset_url %}
    {% assign after_image = 'ropa-despues.jpg' | asset_url %}
  {% else %}
    {% assign before_image = product.images[0] | img_url: 'master' %}
    {% assign after_image = product.images[1] | img_url: 'master' %}
{% endcase %}

<div class="before-after-container">
  <figure class="before-after-wrapper">
    <div class="after-image" style="background-image: url({{ after_image }});"></div>
    <div id="before_after_{{ product.id }}" class="before-image" style="background-image: url({{ before_image }});"></div>
    <div class="slider-line" id="slider_line_{{ product.id }}"></div>
    <!-- Icono centrado para el control del slider -->
    <div class="slider-icon" id="slider_icon_{{ product.id }}">
      <span>&#8656;</span> <!-- Puedes cambiar el icono si prefieres otro -->
    </div>
  </figure>
  <input 
    oninput="beforeAfter({{ product.id }})" 
    onchange="beforeAfter({{ product.id }})" 
    type="range" min="0" max="100" value="50" 
    id="before_after_slider_{{ product.id }}" 
  />
</div>

<style>
:root {
  --before-after-background-color: #1f1f1c;
}

.before-after-container {
  position: relative;
  width: 100%;
  max-width: 600px;
  aspect-ratio: 1 / 1;
  background: var(--before-after-background-color);
  overflow: hidden;
}

.before-after-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.after-image, .before-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.before-image {
  width: 50%; /* Inicialmente al 50% */
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  transition: width 0.2s ease-in-out;
  animation: first 2s 1 normal ease-in-out 0.1s forwards;
}

/* Animación inicial */
@keyframes first {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}

/* Línea del slider */
.slider-line {
  position: absolute;
  top: 0;
  left: 50%;
  width: 5px;
  height: 100%;
  background: rgba(255, 255, 255, 0.7);
  transform: translateX(-50%);
  transition: left 0.2s ease-in-out;
}

/* Icono centrado en el slider */
.slider-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 2rem; /* Puedes cambiar el tamaño del icono */
  color: #fff;
  z-index: 3; /* Asegúrate de que esté por encima de las imágenes */
}

/* Corrección: Slider ahora es funcional */
input[type="range"] {
  -moz-appearance: none;
  -webkit-appearance: none;
  border: none;
  background: transparent;
  cursor: col-resize;
  height: 30px;
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  opacity: 1; /* Visible */
  z-index: 2;
}

/* Estilos para mejorar la apariencia del control deslizante */
input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 20px;
  height: 20px;
  background: white;
  border: 2px solid #333;
  border-radius: 50%;
  cursor: pointer;
}

input[type="range"]::-moz-range-thumb {
  width: 20px;
  height: 20px;
  background: white;
  border: 2px solid #333;
  border-radius: 50%;
  cursor: pointer;
}
</style>

<script>
function beforeAfter(productId) {
  let beforeImage = document.getElementById("before_after_" + productId);
  let slider = document.getElementById("before_after_slider_" + productId);
  let sliderLine = document.getElementById("slider_line_" + productId);
  let sliderIcon = document.getElementById("slider_icon_" + productId);

  beforeImage.style.width = slider.value + "%";
  sliderLine.style.left = slider.value + "%";
  sliderIcon.style.left = slider.value + "%"; // Aseguramos que el icono se mueva con el slider
}
</script>
