{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

<style>
:root {
  --codefy-aspect-ratio: 1 / 1;
  --codefy-before-image: url({{ before_image }});
  --codefy-after-image: url({{ after_image }});
  --codefy-bg-color: #1f1f1c;
}

.codefy-comparison-wrapper {
  aspect-ratio: var(--codefy-aspect-ratio);
  background: var(--codefy-bg-color);
  width: 100%;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
}

.codefy-comparison-wrapper figure {
  background-image: var(--codefy-after-image);
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

#codefy_comparison_slider {
  background-image: var(--codefy-before-image);
  background-size: cover;
  bottom: 0;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
  max-width: 98.6%;
  min-width: 0.6%;
  overflow: visible;
  position: absolute;
  width: 50%;
  animation: codefyFirst 2s 1 normal ease-in-out 0.1s;
  -webkit-animation: codefyFirst 2s 1 normal ease-in-out 0.1s;
}

input#codefy_range_input {
  -moz-appearance: none;
  -webkit-appearance: none;
  border: none;
  background: transparent;
  cursor: col-resize;
  height: 100vw;
  left: 0;
  margin: 0;
  outline: none;
  padding: 0;
  position: relative;
  top: -100vw;
  width: 100%;
}

input#codefy_range_input::-moz-range-track {
  background: transparent;
}

input#codefy_range_input::-ms-track {
  border: none;
  background-color: transparent;
  height: 100vw;
  left: 0;
  top: -100vw;
  width: 100%;
  margin: 0;
  padding: 0;
  outline: none;
  position: relative;
  cursor: col-resize;
  color: transparent;
}

input#codefy_range_input::-ms-fill-lower {
  background-color: transparent;
}

input#codefy_range_input::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#codefy_range_input::-moz-range-thumb {
  -moz-appearance: none;
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#codefy_range_input::-ms-thumb {
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#codefy_range_input::-ms-tooltip {
  display: none;
}

#codefy_comparison_slider::before {
  background: url(https://assets.codepen.io/191814/comparision.png) no-repeat scroll 0 center transparent;
  background-size: contain;
  content: " ";
  float: right;
  height: 100%;
  margin-right: -34px;
  position: relative;
  top: 0;
  width: 64px;
}

@keyframes first {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}

@-webkit-keyframes first {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}
</style>

<div class="codefy-comparison-wrapper">
  <figure>
    <div id="codefy_comparison_slider"></div>
  </figure>
  <input oninput="codefyCompare()" onchange="codefyCompare()" type="range" min="0" max="100" value="50" id="codefy_range_input" />
</div>

<script>
function codefyCompare() {
  document.getElementById("codefy_comparison_slider").style.width = 
    document.getElementById("codefy_range_input").value + "%";
}
</script>

