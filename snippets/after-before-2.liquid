{% comment %}
  Before & After Slider (Using Metafields for Dynamic Images)
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
  <div class="before-after-wrapper" data-before-after-wrapper>
    <div class="before-after-container">
      <figure>
        <div id="before_after_{{ product.id }}"></div>
      </figure>
      <input 
        type="range" 
        min="0" 
        max="100" 
        value="50" 
        id="before_after_slider_{{ product.id }}" 
        class="before-after-range"
      />
    </div>
  </div>

  <style>
    :root {
      --before-image: url({{ before_image }});
      --after-image: url({{ after_image }});
    }

    .before-after-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      background-color: #1f1f1c;
      touch-action: none;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease;
    }

    .before-after-wrapper.is--active {
      opacity: 1;
      visibility: visible;
    }

    .before-after-container {
      width: 100%;
      height: 100%;
      overflow: hidden;
      transition: all 0.3s ease-in-out;
    }

    .before-after-container figure {
      background-image: var(--after-image);
      position: relative;
      margin: 0;
      background-size: cover;
      background-position: center;
      width: 100%;
      height: 100%;
    }

    #before_after_{{ product.id }} {
      background-image: var(--before-image);
      background-size: cover;
      background-position: center;
      bottom: 0;
      border-right: 5px solid rgba(255, 255, 255, 0.7);
      box-shadow: 10px 0 15px -13px #000;
      height: 100%;
      max-width: 98.6%;
      min-width: 0.6%;
      overflow: visible;
      position: absolute;
      width: 50%;
      animation: first 2s 1 normal ease-in-out 0.1s;
      -webkit-animation: first 2s 1 normal ease-in-out 0.1s;
    }

    #before_after_slider_{{ product.id }} {
      -moz-appearance: none;
      -webkit-appearance: none;
      border: none;
      background: transparent;
      cursor: col-resize;
      height: 100vh;
      left: 0;
      margin: 0;
      outline: none;
      padding: 0;
      position: relative;
      top: -100vh;
      width: 100%;
      z-index: 20;
    }

    #before_after_slider_{{ product.id }}::-moz-range-track {
      background: transparent;
    }

    #before_after_slider_{{ product.id }}::-ms-track {
      border: none;
      background-color: transparent;
      height: 100vh;
      left: 0;
      top: -100vh;
      width: 100%;
      margin: 0;
      padding: 0;
      outline: none;
      position: relative;
      cursor: col-resize;
      color: transparent;
    }

    #before_after_slider_{{ product.id }}::-ms-fill-lower {
      background-color: transparent;
    }

    #before_after_slider_{{ product.id }}::-webkit-slider-thumb {
      -webkit-appearance: none;
      height: 100vh;
      width: 0.5%;
      opacity: 0;
    }

    #before_after_slider_{{ product.id }}::-moz-range-thumb {
      -moz-appearance: none;
      height: 100vh;
      width: 0.5%;
      opacity: 0;
    }

    #before_after_slider_{{ product.id }}::-ms-thumb {
      height: 100vh;
      width: 0.5%;
      opacity: 0;
    }

    #before_after_slider_{{ product.id }}::-ms-tooltip {
      display: none;
    }

    #before_after_{{ product.id }}::before {
      background: url(https://assets.codepen.io/191814/comparision.png) no-repeat scroll 0 center transparent;
      background-size: contain;
      content: " ";
      float: right;
      height: 100%;
      margin-right: -34px;
      position: relative;
      top: 0;
      width: 64px;
    }

    @keyframes first {
      0% { width: 0%; }
      50% { width: 80%; }
      100% { width: 50%; }
    }

    @-webkit-keyframes first {
      0% { width: 0%; }
      50% { width: 80%; }
      100% { width: 50%; }
    }
  </style>
{% endif %}
