{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

<style>
:root {
  --comp-before-after-ratio: 1 / 1;
  --comp-before-img: url({{ before_image }});
  --comp-after-img: url({{ after_image }});
  --comp-bg-color: #1f1f1c;
}

.comp-image-container {
  aspect-ratio: var(--comp-before-after-ratio);
  background: var(--comp-bg-color);
  width: 100%;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
}

.comp-image-container figure {
  background-image: var(--comp-after-img);
  position: relative;
  margin: 0;
  background-size: cover;
  width: 100%;
  height: 100%;
}

#comp_image_before {
  background-image: var(--comp-before-img);
  background-size: cover;
  bottom: 0;
  border-right: 5px solid rgba(255, 255, 255, 0.7);
  box-shadow: 10px 0 15px -13px #000;
  height: 100%;
  max-width: 98.6%;
  min-width: 0.6%;
  overflow: visible;
  position: absolute;
  width: 50%;
  animation: comp_first 2s 1 normal ease-in-out 0.1s;
  -webkit-animation: comp_first 2s 1 normal ease-in-out 0.1s;
}

input#comp_image_slider {
  -moz-appearance: none;
  -webkit-appearance: none;
  border: none;
  background: transparent;
  cursor: col-resize;
  height: 100vw;
  left: 0;
  margin: 0;
  outline: none;
  padding: 0;
  position: relative;
  top: -100vw;
  width: 100%;
}

input#comp_image_slider::-moz-range-track {
  background: transparent;
}

input#comp_image_slider::-ms-track {
  border: none;
  background-color: transparent;
  height: 100vw;
  left: 0;
  top: -100vw;
  width: 100%;
  margin: 0;
  padding: 0;
  outline: none;
  position: relative;
  cursor: col-resize;
  color: transparent;
}

input#comp_image_slider::-ms-fill-lower {
  background-color: transparent;
}

input#comp_image_slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#comp_image_slider::-moz-range-thumb {
  -moz-appearance: none;
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#comp_image_slider::-ms-thumb {
  height: 100vw;
  width: 0.5%;
  opacity: 0;
}

input#comp_image_slider::-ms-tooltip {
  display: none;
}

#comp_image_before::before {
  background: url(https://assets.codepen.io/191814/comparision.png) no-repeat scroll 0 center transparent;
  background-size: contain;
  content: " ";
  float: right;
  height: 100%;
  margin-right: -34px;
  position: relative;
  top: 0;
  width: 64px;
}

@keyframes comp_first {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}

@-webkit-keyframes comp_first {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 50%; }
}
</style>

<div class="comp-image-container">
  <figure>
    <div id="comp_image_before"></div>
  </figure>
  <input oninput="compBeforeAfter()" onchange="compBeforeAfter()" type="range" min="0" max="100" value="50" id="comp_image_slider" />
</div>

<script>
function compBeforeAfter() {
  document.getElementById("comp_image_before").style.width = 
    document.getElementById("comp_image_slider").value + "%";
}
</script>

