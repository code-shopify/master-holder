{% comment %}
  Before & After Slider (Using Metafields for Dynamic Images)
{% endcomment %}

{% assign before_image = product.metafields.custom.before_image | img_url: 'master' %}
{% assign after_image = product.metafields.custom.after_image | img_url: 'master' %}

{% if before_image != blank and after_image != blank %}
  <div class="before-after-wrapper" data-before-after-wrapper>
    <div class="before-after-figure">
      <div class="before-after-image after-image"></div>
      <div id="before_after_{{ product.id }}" class="before-after-image before-image"></div>
    </div>
    <input 
      type="range" 
      min="0" 
      max="100" 
      value="50" 
      id="before_after_slider_{{ product.id }}" 
      class="before-after-range"
    />
  </div>

  <style>
    :root {
      --before-image: url({{ before_image }});
      --after-image: url({{ after_image }});
    }

    .before-after-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      background-color: #1f1f1c;
      touch-action: none;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease;
    }

    .before-after-wrapper.is--active {
      opacity: 1;
      visibility: visible;
    }

    .before-after-figure {
      position: relative;
      margin: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    .before-after-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .after-image {
      background-image: var(--after-image);
      z-index: 1;
    }

    .before-image {
      background-image: var(--before-image);
      z-index: 2;
      clip-path: inset(0 0 0 50%);
      border-left: 5px solid rgba(255, 255, 255, 0.7);
      box-shadow: -10px 0 15px -13px #000;
      transition: clip-path 0.1s ease-out;
    }

    .before-after-range {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: transparent;
      outline: none;
      border: none;
      padding: 0;
      margin: 0;
      cursor: col-resize;
      z-index: 20;
    }

    .before-after-range::-webkit-slider-thumb {
      -webkit-appearance: none;
      width: 40px;
      height: 100%;
      background: transparent;
      border: none;
      cursor: col-resize;
    }

    .before-after-range::-moz-range-thumb {
      width: 40px;
      height: 100%;
      background: transparent;
      border: none;
      cursor: col-resize;
    }

    .before-after-range::-ms-thumb {
      width: 40px;
      height: 100%;
      background: transparent;
      border: none;
      cursor: col-resize;
    }

    .before-image::after {
      content: "";
      position: absolute;
      left: -32px;
      top: 0;
      width: 64px;
      height: 100%;
      background: url('https://assets.codepen.io/191814/comparision.png') no-repeat center;
      background-size: contain;
      pointer-events: none;
    }
  </style>
{% endif %}
