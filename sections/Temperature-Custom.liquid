{% style %}
.temperature-retention {
    height: {{ section.settings.section_height }}px;
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_right }}px {{ section.settings.section_padding_bottom }}px {{ section.settings.section_padding_left }}px;
    margin: {{ section.settings.section_margin_top }}px {{ section.settings.section_margin_right }}px {{ section.settings.section_margin_bottom }}px {{ section.settings.section_margin_left }}px;
    width: 100%;
    box-sizing: border-box;
}

.temperature-retention__container {
    block-size: 516.35px;
    border-block-end-color: rgb(33, 37, 41);
    border-block-start-color: rgb(33, 37, 41);
    border-inline-end-color: rgb(33, 37, 41);
    border-inline-start-color: rgb(33, 37, 41);
    box-sizing: border-box;
    caret-color: rgb(33, 37, 41);
    color: rgb(33, 37, 41);
    column-rule-color: rgb(33, 37, 41);
    height: 516.35px;
    inline-size: 1520.8px;
    letter-spacing: 0.4px;
    padding-block-start: 48px;
    padding-inline-end: 12px;
    padding-inline-start: 12px;
    perspective-origin: 760.4px 258.175px;
    text-decoration: none solid rgb(33, 37, 41);
    text-emphasis-color: rgb(33, 37, 41);
    text-rendering: optimizespeed;
    text-size-adjust: 100%;
    transform-origin: 760.4px 258.175px;
    width: 1520.8px;
    border: 0px none rgb(33, 37, 41);
    font: 16px / 24px "DINOT - Cond Bold";
    outline: rgb(33, 37, 41) none 0px;
    padding: 48px 12px 0px;
}

.temperature-retention__content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    height: 100%;
}

.temperature-retention__text-container {
    flex: 0 0 50%;
    padding: 0 12px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.temperature-retention__features {
    flex: 0 0 50%;
    padding: {{ section.settings.features_padding_top }}px {{ section.settings.features_padding_right }}px {{ section.settings.features_padding_bottom }}px {{ section.settings.features_padding_left }}px;
    margin: {{ section.settings.features_margin_top }}px {{ section.settings.features_margin_right }}px {{ section.settings.features_margin_bottom }}px {{ section.settings.features_margin_left }}px;
    box-sizing: border-box;
}

.temperature-retention__features-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 20px;
}

.temperature-retention__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0;
    margin: 0;
    width: 100%;
}

.temperature-retention__image {
    width: {{ section.settings.image_size }}px;
    height: {{ section.settings.image_size }}px;
    max-width: {{ section.settings.image_size }}px;
    max-height: {{ section.settings.image_size }}px;
    margin: {{ section.settings.image_margin_top }}px {{ section.settings.image_margin_right }}px {{ section.settings.image_margin_bottom }}px {{ section.settings.image_margin_left }}px;
    display: block;
    vertical-align: middle;
    animation: 0.5s cubic-bezier(0.29, 0.65, 0.58, 1) 0s 1 normal forwards running fade-in;
}

.temperature-retention__feature-title {
    font-family: {{ section.settings.feature_font.family }};
    font-size: {{ section.settings.feature_size }}px;
    line-height: {{ section.settings.feature_line_height }};
    color: {{ section.settings.feature_color }};
    padding: {{ section.settings.feature_padding_top }}px {{ section.settings.feature_padding_right }}px {{ section.settings.feature_padding_bottom }}px {{ section.settings.feature_padding_left }}px;
    margin: {{ section.settings.feature_margin_top }}px {{ section.settings.feature_margin_right }}px {{ section.settings.feature_margin_bottom }}px {{ section.settings.feature_margin_left }}px;
    text-align: {{ section.settings.feature_text_align }};
    text-transform: uppercase;
}

.temperature-retention__feature-title--cold {
    color: {{ section.settings.cold_feature_color }};
}

.temperature-retention__feature-title--hot {
    color: {{ section.settings.hot_feature_color }};
}

@media screen and (max-width: 1024px) {
    .temperature-retention {
        height: auto;
        min-height: {{ section.settings.section_height }}px;
    }

    .temperature-retention__content {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .temperature-retention__text-container,
    .temperature-retention__features {
        flex: 0 0 100%;
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
    }

    .temperature-retention__features {
        margin-top: 40px;
    }

    .temperature-retention__features-container {
        gap: 30px;
    }

    .temperature-retention__heading {
        font-size: calc({{ section.settings.heading_size }}px * 0.8);
    }

    .temperature-retention__paragraph {
        font-size: calc({{ section.settings.paragraph_size }}px * 0.9);
    }

    .temperature-retention__feature-title {
        font-size: calc({{ section.settings.feature_size }}px * 0.8);
    }
}

@media screen and (max-width: 768px) {
    .temperature-retention__container {
        padding: 24px 12px 0px;
    }

    .temperature-retention__heading {
