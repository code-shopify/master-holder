{% schema %}
{
  "name": "Temperature Retention",
  "tag": "section",
  "class": "temperature-retention-section",
  "settings": [
    {
      "type": "header",
      "content": "Estilos de la Sección"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 200,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Altura de la Sección",
      "default": 520
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding de la Sección",
      "default": 50
    },
    {
      "type": "range",
      "id": "section_margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Margin de la Sección",
      "default": 0
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal",
      "default": "SUPERIOR TEMPERATURE RETENTION"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Texto descriptivo",
      "default": "Keep your coffee hot. Keep your water cold.<br>Keep your food fresh and your day under control."
    },
    {
      "type": "image_picker",
      "id": "cold_image",
      "label": "Imagen Cold"
    },
    {
      "type": "text",
      "id": "cold_text1",
      "label": "Cold: línea 1",
      "default": "Keeps"
    },
    {
      "type": "text",
      "id": "cold_text2",
      "label": "Cold: línea 2",
      "default": "cold"
    },
    {
      "type": "image_picker",
      "id": "hot_image",
      "label": "Imagen Hot"
    },
    {
      "type": "text",
      "id": "hot_text1",
      "label": "Hot: línea 1",
      "default": "Keeps"
    },
    {
      "type": "text",
      "id": "hot_text2",
      "label": "Hot: línea 2",
      "default": "Hot"
    },
    {
      "type": "header",
      "content": "Estilos del Título Principal"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Fuente del Título",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 12,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Tamaño del Título",
      "default": 70
    },
    {
      "type": "range",
      "id": "heading_line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Altura de Línea del Título",
      "default": 1.1
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del Título",
      "default": "#212529"
    },
    {
      "type": "range",
      "id": "heading_padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding del Título",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_margin",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin del Título",
      "default": 0
    },
    {
      "type": "select",
      "id": "heading_text_align",
      "label": "Alineación del Título",
