{% style %}
.temperature-retention {
    height: {{ section.settings.section_height }}px;
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_right }}px {{ section.settings.section_padding_bottom }}px {{ section.settings.section_padding_left }}px;
    margin: {{ section.settings.section_margin_top }}px {{ section.settings.section_margin_right }}px {{ section.settings.section_margin_bottom }}px {{ section.settings.section_margin_left }}px;
    width: 100%;
    box-sizing: border-box;
}

.temperature-retention__container {
    height: 516.35px;
    width: 1520.8px;
    padding: 48px 12px 0px;
    box-sizing: border-box;
    font: 16px / 24px "DINOT - Cond Bold";
    color: rgb(33, 37, 41);
}

.temperature-retention__content {
    height: 468.35px;
    width: 1520.8px;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    margin: 0px;
    box-sizing: border-box;
    font: 16px / 24px "DINOT - Cond Bold";
    color: rgb(33, 37, 41);
}

.temperature-retention__text-container {
    height: 468.35px;
    width: 760.4px;
    padding: 0px 12px;
    box-sizing: border-box;
    flex: 0 0 auto;
    font: 16px / 24px "DINOT - Cond Bold";
    color: rgb(33, 37, 41);
}

.temperature-retention__heading {
    font-family: {{ section.settings.heading_font.family }};
    font-size: {{ section.settings.heading_size }}px;
    line-height: {{ section.settings.heading_line_height }};
    color: {{ section.settings.heading_color }};
    padding: {{ section.settings.heading_padding_top }}px {{ section.settings.heading_padding_right }}px {{ section.settings.heading_padding_bottom }}px {{ section.settings.heading_padding_left }}px;
    margin: {{ section.settings.heading_margin_top }}px {{ section.settings.heading_margin_right }}px {{ section.settings.heading_margin_bottom }}px {{ section.settings.heading_margin_left }}px;
    text-align: {{ section.settings.heading_text_align }};
    text-transform: uppercase;
}

.temperature-retention__paragraph {
    font-family: {{ section.settings.paragraph_font.family }};
    font-size: {{ section.settings.paragraph_size }}px;
    line-height: {{ section.settings.paragraph_line_height }};
    color: {{ section.settings.paragraph_color }};
    padding: {{ section.settings.paragraph_padding_top }}px {{ section.settings.paragraph_padding_right }}px {{ section.settings.paragraph_padding_bottom }}px {{ section.settings.paragraph_padding_left }}px;
    margin: {{ section.settings.paragraph_margin_top }}px {{ section.settings.paragraph_margin_right }}px {{ section.settings.paragraph_margin_bottom }}px {{ section.settings.paragraph_margin_left }}px;
    text-align: {{ section.settings.paragraph_text_align }};
}

.temperature-retention__features {
    height: 259.263px;
    width: 736.4px;
    padding: 0px 12px;
    box-sizing: border-box;
    font: 70px / 73px "DINOT - Cond Bold";
    color: rgb(33, 37, 41);
}

.temperature-retention__features-container {
    height: 259.263px;
    width: 736.4px;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    margin: 0px -12px;
    box-sizing: border-box;
    font: 70px / 73px "DINOT - Cond Bold";
    color: rgb(33, 37, 41);
}

.temperature-retention__feature {
    height: 259.263px;
    width: 245.462px;
    padding: 0px 12px;
    text-align: center;
    box-sizing: border-box;
    flex: 0 0 auto;
    font: 70px / 73px "DINOT - Cond Bold";
    color: rgb(33, 37, 41);
}

.temperature-retention__image {
    height: 139.262px;
    width: 100px;
    display: block;
    margin: 0px 40.7375px;
    max-width: 140px;
    vertical-align: middle;
    animation: 0.5s cubic-bezier(0.29, 0.65, 0.58, 1) 0s 1 normal forwards running fade-in;
}

.temperature-retention__feature-title {
    font-family: {{ section.settings.feature_font.family }};
    font-size: {{ section.settings.feature_size }}px;
    line-height: {{ section.settings.feature_line_height }};
    color: {{ section.settings.feature_color }};
    padding: {{ section.settings.feature_padding_top }}px {{ section.settings.feature_padding_right }}px {{ section.settings.feature_padding_bottom }}px {{ section.settings.feature_padding_left }}px;
    margin: {{ section.settings.feature_margin_top }}px {{ section.settings.feature_margin_right }}px {{ section.settings.feature_margin_bottom }}px {{ section.settings.feature_margin_left }}px;
    text-align: {{ section.settings.feature_text_align }};
    text-transform: uppercase;
}

.temperature-retention__feature-title--cold {
    color: {{ section.settings.cold_feature_color }};
}

.temperature-retention__feature-title--hot {
    color: {{ section.settings.hot_feature_color }};
}

@media screen and (max-width: 768px) {
    .temperature-retention {
        height: {{ section.settings.section_height_mobile }}px;
    }

    .temperature-retention__container {
        width: 100%;
        height: auto;
        padding: 24px 12px;
    }

    .temperature-retention__content {
        width: 100%;
        height: auto;
        flex-direction: column;
    }

    .temperature-retention__text-container {
        width: 100%;
        height: auto;
        padding: 0 12px;
        margin-bottom: 32px;
    }

    .temperature-retention__features {
        width: 100%;
        height: auto;
        padding: 0 12px;
    }

    .temperature-retention__features-container {
        width: 100%;
        height: auto;
        flex-direction: column;
        align-items: center;
    }

    .temperature-retention__feature {
        width: 100%;
        height: auto;
        padding: 0 12px;
        margin-bottom: 32px;
    }

    .temperature-retention__image {
        width: {{ section.settings.image_size_mobile }}px;
        height: auto;
        margin: 0 auto 16px;
    }

    .temperature-retention__heading {
        font-size: 40px;
        line-height: 1.2;
    }

    .temperature-retention__paragraph {
        font-size: 18px;
        line-height: 1.5;
    }

    .temperature-retention__feature-title {
        font-size: 32px;
        line-height: 1.2;
    }
}

@media screen and (max-width: 480px) {
    .temperature-retention__heading {
        font-size: 32px;
    }

    .temperature-retention__paragraph {
        font-size: 16px;
    }

    .temperature-retention__feature-title {
        font-size: 28px;
    }

    .temperature-retention__image {
        width: 100px;
    }
}
