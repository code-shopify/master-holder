/* Estilos base */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
}

.CotizaComparador {
    width: 210mm;  /* Mantener ancho A4 */
    min-height: 297mm; /* Cambiar height por min-height */
    margin: 10px auto;
    position: relative;
    background: #ffffff;
    padding-bottom: 40px;
}

/* Estilos del encabezado */
.CotizaComparador-header {
    position: relative;
    background-color: white;
    height: 60px;
    width: 100%;
}

.CotizaComparador-header__container {
    position: relative;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    display: flex;
    height: 100%;
    margin: 0;
    padding: 0px 5%;
    z-index: 2;
}

.CotizaComparador-header__logo {
    height: 20px;
    width: auto;
    display: block;
}

.CotizaComparador-header__pleca {
    position: absolute;
    top: 0;
    right: 0;
    width: 80%;
    height: 100%;
    overflow: hidden;
}

.CotizaComparador-header__pleca-img {
    width: 100%;
    height: 100%;
    object-fit: fill;
    object-position: left;
}

/* Contenedor del contenido */
.CotizaComparador__container {
    padding: 0 24px;
    margin-bottom: 20px;
    height: auto;
    overflow: visible;
}

/* TÃ­tulo y fecha */
.CotizaComparador-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
    margin-bottom: 10px;
    padding-inline: 5%;
}

.CotizaComparador-title__text {
    color: #23246C;
    font-size: 14px;
    font-weight: 600;
    margin: 0;
}

.CotizaComparador-title__date {
    color: #23246C;
    font-size: 12px;
}

/* Estilos de la tarjeta principal */
.CotizaComparador-card {
    background: #fff;
    border-radius: 12px;
    border: 2px solid #23246C;
    overflow: visible;
    height: auto;
}

.CotizaComparador-card__date {
    text-align: right;
    padding: 10px 10px;
    color: #666;
    font-size: 14px;
}

.CotizaComparador-card__content {
    display: flex;
    /* padding: 24px; */
}

/* Estilos del paquete */
.CotizaComparador-package {
    flex: 1;
    padding: 12px 24px;
    height: auto;
    min-height: fit-content;
}

.CotizaComparador-package__title {
    color: #23246C;
    font-size: 14px;
    line-height: 1.2;
    font-weight: 600;
    margin: 0 0 16px 0;
}

.CotizaComparador-package__details {
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: auto;
}

.CotizaComparador-package__item {
    display: flex;
    align-items: center;
    color: #4B5563;
    font-size: 10px;
}

.CotizaComparador-package__item i {
    width: 14px;
    color: #23246C;
    margin-right: 10px;
    font-size: 12px;
}

.CotizaComparador-package__item strong {
    color: #23246C;
}

.CotizaComparador-price__container {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

/* Estilos del precio */
.CotizaComparador-price {
    background: #F15B5B;
    padding: 16px;
    border-radius: 0px 10px 0px 8px;
    color: white;
    height: 90px;
    width: 350px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.CotizaComparador-price__label {
    display: block;
    font-size: 14px;
    margin-bottom: 4px;
}

.CotizaComparador-price__amount {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 12px 0;
}

.CotizaComparador-price__note {
    font-size: 8px;
    margin: 0;
    opacity: 0.9;
    line-height: 1.4;
    font-weight: 600;
    margin-top: 10px;
    margin-right: 5px;
}

/* Reservaciones */
.CotizaComparador-reservations {
    margin-top: 10px;
}

.CotizaComparador-reservations__title {
    margin-left: 34px;
}

.CotizaComparador-season__header {
    background: #23246C;
    color: white;
    padding: 10px 20px;
    font-weight: 700;
    font-size: 14px;
}

.CotizaComparador-season__container {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-inline: 22px;
    padding-block: 12px 12px;
}

.CotizaComparador-season__content {
    background: white;
    margin-bottom: 10px;
}

.CotizaComparador-season__title {
    color: #23246C;
    font-size: 13px;
    font-weight: 600;
    margin-block-start: 0;
    margin-block-end: 0.73em;
}

.CotizaComparador-season__content-item {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 18px;
    margin-bottom: 7px;
}

.CotizaComparador-season__deposit {
    margin: 0;
    font-size: 11px;
    line-height: 1.2;
    color: #333;
}

.CotizaComparador-season__payment {
    font-size: 11px;
    line-height: 1.2;
    color: #000000;
    margin-block-start: 0;
    margin-block-end: 0;
}

.CotizaComparador-season--emayorista .CotizaComparador-season__header {
    background: #878787;
}

/* Vuelos */
.CotizaComparador-flights {
    background: white;
    padding: 10px;
    margin-top: 10px;
    border-radius: 8px;
}

.CotizaComparador-flights__title {
    color: #23246C;
    font-size: 16px;
    margin-bottom: 15px;
    font-weight: 500;
}

/* Estilos para las temporadas */
.CotizaComparador-seasons {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 20px;
}

.CotizaComparador-season {
    overflow: hidden;
}

/* Estilos para los vuelos */
.CotizaComparador-flight {
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 24px;
}

.CotizaComparador-flight__header {
    background-color: #6B7280;
    padding: 12px 16px;
}

.CotizaComparador-flight__title {
    color: white;
    font-size: 16px;
    margin: 0;
    font-weight: 500;
}

.CotizaComparador-flight__content {
    padding: 32px 32px;
    background: white;
}

.CotizaComparador-flight__summary {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
}

.CotizaComparador-flight__airline-icon {
    width: 30px;
    height: 30px;
    flex-shrink: 0;
    border-radius: 25px;
    border: 1px solid #EBEDEF;
    padding: 5px;
}

.CotizaComparador-flight__airline-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.CotizaComparador-flight__info {
    flex: 1;
    margin-block: 15px;
}

.CotizaComparador-flight__time {
    font-size: 16px;
    color: #111827;
    margin-bottom: 12px;
}

.CotizaComparador-flight__direct,
.CotizaComparador-flight__duration {
    color: #23246C;
    font-size: 12px;
    margin-left: 8px;
}

.CotizaComparador-flight__airports {
    color: #4B5563;
    font-size: 12px;
}

.CotizaComparador-flight__airport {
    margin-bottom: 4px;
}

.CotizaComparador-flight__airport strong {
    color: #111827;
}

.CotizaComparador-flight__subtitle {
    color: #374151;
    font-size: 14px;
    margin: 0 0 16px 0;
    font-weight: 600;
}

.CotizaComparador-flight__grid {
    display: flex;
    justify-content: space-evenly;
    gap: 16px;
}

.CotizaComparador-flight__detail {
    display: flex;
    flex-direction: row;
    gap: 10px;
}

.CotizaComparador-flight__label {
    color: #6B7280;
    font-size: 13px;
    margin-bottom: 4px;
}

.CotizaComparador-flight__value {
    color: #111827;
    font-size: 14px;
    font-weight: 500;
}

.CotizaComparador-flight__details {
    margin-left: 10px;
}

/* Footer */
.CotizaComparador-footer {
    padding: 0;
    position: absolute; /* Cambiado de fixed a absolute */
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    display: flex;
    justify-content: center;
}

.CotizaComparador-footer__pagination {
    background-color: #23246C;
    color: white;
    text-align: center;
    font-size: 10px;
    font-weight: 600;
    padding: 8px;
    border-radius: 15px 15px 0 0;
    width: 120px;
}

/* Estilos para el hotel */
.CotizaComparador-hotel {
    padding: 20px 32px;
}

.CotizaComparador-hotel__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.CotizaComparador-hotel__name {
    color: #000000;
    font-size: 18px;
    font-weight: 600;
    margin: 0;
}

.CotizaComparador-hotel__description {
    color: #28333E;
    font-size: 13px;
    margin-block-start: 0;
    margin-block-end: 0;
}

.CotizaComparador-hotel__rating-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
}

.CotizaComparador-hotel__rating {
    color: #FFD700;
    font-size: 14px;
    margin-block: 8px;
}

.CotizaComparador-hotel__address {
    color: #4B5563;
    font-size: 13px;
    margin-bottom: 16px;
}

.CotizaComparador-hotel__address span {
    font-weight: 600;
    color: #23246C;
}

.CotizaComparador-hotel__details {
    margin-top: 24px;
}

.CotizaComparador-hotel__subtitle {
    color: #23246C;
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 12px 0;
}

.CotizaComparador-hotel__rooms {
    display: flex;
    flex-direction: column;
    padding: 0 10px;
    gap: 16px;
}

.CotizaComparador-hotel__room {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 4px;
}

.CotizaComparador-hotel__room-type {
    color: #000000;
    font-weight: 600;
    font-size: 13px;
}

.CotizaComparador-hotel__occupancy {
    color: #4B5563;
    font-size: 12px;
    margin-left: 10px;
}

.CotizaComparador-hotel__plan {
    color: #000000;
    font-size: 11px;
    text-align: center;
}
