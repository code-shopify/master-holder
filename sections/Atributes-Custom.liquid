      "name": "Promotions Block",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.promotions .grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -12px;
}
.promotions .item {
  width: 50%;
  box-sizing: border-box;
  padding: 0 12px;
  text-align: center;
  font-family: 'DINOT - Cond Bold', sans-serif;
  border: 3.2px solid #fff;
}
.promotions .item-inner {
  padding: 48px 0 16px;
}
.promotions .item img {
  width: 140px;
  height: 140px;
  display: block;
  margin: 0 auto 24px;
}
.promotions .item h1 {
  font-size: 33px;
  color: #fff;
  text-transform: uppercase;
  margin-bottom: 8px;
}
.promotions .item p {
  font-size: 19px;
  line-height: 30px;
  color: #fff;
  padding: 0 20px 38px;
}
@media (min-width: 768px) {
  .promotions .item {
    width: 50%;
  }
}
{% endstylesheet %}

