{% schema %}
{
  "name": "Promotions Block",
  "tag": "section",
  "class": "promotions",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ícono"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "DISHWASHER SAFE"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción",
          "default": "Most of our products are dishwasher-safe. Easy to clean and stand the test of time."
        },
        {
          "type": "color",
          "id": "background",
          "label": "Color de fondo",
          "default": "#4a4c51"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Promotions Block",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.promotions {
    width: 100%;
    font-family: "DINOT - Cond Bold";
    letter-spacing: 0.4px;
}

.promotions-container {
    width: 100%;
    padding: 4px 12px;
}

.promotions-grid {
    display: flex;
    flex-flow: row wrap;
    margin: 0 -12px;
    width: 100%;
}

.promotion-item {
    flex: 1 1 300px;
    min-width: 300px;
    padding: 20px;
    text-align: center;
    border: 3.2px solid #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
}

.promotion-item--gray {
    background-color: #4a4c51;
}

.promotion-item--blue {
    background-color: #1b7eac;
}

.promotion-icon {
    display: block;
    width: 140px;
    height: 140px;
    margin: 0 auto 24px;
    max-width: 140px;
    animation: fade-in 0.5s cubic-bezier(0.29, 0.65, 0.58, 1) forwards;
}

.promotion-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.promotion-title {
    color: #ffffff;
    font-size: 33px;
    line-height: 35px;
    font-weight: 500;
    text-transform: uppercase;
    margin: 0 0 8px;
    text-align: center;
}

.promotion-description {
    color: #ffffff;
    font-size: 19px;
    line-height: 30px;
    font-family: DINOT;
    margin: 0;
    padding: 0 20px;
    text-align: center;
}

@keyframes fade-in {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@media screen and (max-width: 768px) {
    .promotion-item {
        flex: 1 1 100%;
        min-width: 100%;
    }
}
{% endstylesheet %}

<div class="promotions">
    <div class="promotions-container">
        <div class="promotions-grid">
            {% for block in section.blocks %}
                <div class="promotion-item" style="background-color: {{ block.settings.background }}">
                    {% if block.settings.icon != blank %}
                        <div class="promotion-icon">
                            {{ block.settings.icon | image_url: width: 200 | image_tag: 
                                alt: block.settings.title,
                                width: 200,
                                height: 200,
                                loading: 'lazy'
                            }}
                        </div>
                    {% endif %}
                    {% if block.settings.title != blank %}
                        <h1 class="promotion-title">
                            {{ block.settings.title }}
                        </h1>
                    {% endif %}
                    {% if block.settings.description != blank %}
                        <p class="promotion-description">
                            {{ block.settings.description }}
                        </p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
