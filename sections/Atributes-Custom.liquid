{% schema %}
{
  "name": "Promotions Block",
  "tag": "section",
  "class": "promotions",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ícono"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "DISHWASHER SAFE"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción",
          "default": "Most of our products are dishwasher-safe. Easy to clean and stand the test of time."
        },
        {
          "type": "color",
          "id": "background",
          "label": "Color de fondo",
          "default": "#4a4c51"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Promotions Block",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.promotions {
    width: 100%;
    height: 420.862px;
    font-family: "DINOT - Cond Bold";
    letter-spacing: 0.4px;
}

.promotions-container {
    width: 100%;
    height: 420.862px;
    padding: 4px 12px;
}

.promotions-grid {
    display: flex;
    flex-flow: row wrap;
    margin: 0 -12px;
    height: 412.862px;
}

.promotion-item {
    height: 412.862px;
    width: 380.2px;
    max-width: 100%;
    padding: 0 12px;
    text-align: center;
    border: 3.2px solid #ffffff;
    flex: 0 0 auto;
}

.promotion-item--gray {
    background-color: #4a4c51;
}

.promotion-item--blue {
    background-color: #1b7eac;
}

.promotion-icon {
    display: block;
    width: 140px;
    height: 140px;
    margin: 48px 104.9px 24px;
    max-width: 140px;
    animation: fade-in 0.5s cubic-bezier(0.29, 0.65, 0.58, 1) forwards;
}

.promotion-title {
    color: #ffffff;
    font-size: 33px;
    line-height: 35px;
    font-weight: 500;
    text-transform: uppercase;
    margin: 0 0 8px;
    text-align: center;
}

.promotion-description {
    color: #ffffff;
    font-size: 19px;
    line-height: 30px;
    font-family: DINOT;
    margin: 0 0 16px;
    padding: 6.9875px 20.9875px 38.475px;
    text-align: center;
}

@keyframes fade-in {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
{% endstylesheet %}

<div class="promotions">
    <div class="promotions-container">
        <div class="promotions-grid">
            {% for block in section.blocks %}
                <div class="promotion-item" style="background-color: {{ block.settings.background }}">
                    {% if block.settings.icon %}
                        <image class="promotion-icon">
                            <img src="{{ block.settings.icon | img_url: '200x' }}" alt="{{ block.settings.title }}" width="200" height="200.0" />
                        </image>
                    {% endif %}
                    {% if block.settings.title %}
                        <h1 class="promotion-title">
                            {{ block.settings.title }}
                        </h1>
                    {% endif %}
                    {% if block.settings.description %}
                        <p class="promotion-description">
                            {{ block.settings.description }}
                        </p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
