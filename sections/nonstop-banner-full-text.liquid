<div class="t4s-section-inner t4s-container-wrap">
  <div class="t4s-container"> 
    <div class="nonstop-banner">
      <div class="nonstop-banner__container">

        <!-- Sección Izquierda: Texto y Botón -->
        <div class="nonstop-banner__left" style="background-color: {{ section.settings.bg_color }}">
          <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
          <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
          <a href="{{ section.settings.button_link }}" class="nonstop-banner__button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}">
            {{ section.settings.button_text }}
          </a>
        </div>

        <!-- Sección Derecha: Texto y Espacio para la Imagen Flotante -->
        <div class="nonstop-banner__right" style="background-color: {{ section.settings.bg_color }}">
          <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.right_title }}</h2>
          <p style="color: {{ section.settings.text_color }}">{{ section.settings.right_subtitle }}</p>
        </div>

        <!-- Imagen Flotante -->
        <div class="nonstop-banner__center">
          <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Product" class="nonstop-banner__main-image">
        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .nonstop-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rem 0;
    width: 100%;
    position: relative;
  }

  .nonstop-banner__container {
    display: grid;
    grid-template-columns: 50% 50%;
    max-width: 1500px;
    width: 100%;
    align-items: center;
    position: relative;
    border-radius: 1rem;
  }

  /* Sección Izquierda (Texto y Botón) */
  .nonstop-banner__left, .nonstop-banner__right {
    background-color: #f0f0f0;
    padding: 4rem 7rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
    z-index: 1; /* Para que la imagen quede encima */
  }

  .nonstop-banner__left h2, .nonstop-banner__right h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .nonstop-banner__left p, .nonstop-banner__right p {
    font-size: 1.4em;
    margin-bottom: 20px;
  }

  .nonstop-banner__button {
    display: inline-block;
    padding: 14px 26px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 1rem;
    text-align: center;
    border: 2px solid black;
    font-size: 1.2em;
    background: black;
    color: white;
  }

  /* Imagen Flotante en el Centro (Ocupa Todo el Espacio) */
  .nonstop-banner__center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 35%; /* Aumenta el tamaño de la imagen */
    max-width: 400px; /* Máximo tamaño */
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
  }

  .nonstop-banner__main-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(15px 15px 40px rgba(0, 0, 0, 0.4));
  }

  /* Animación de Flotación */
  @keyframes float {
    0% { transform: translateY(0px) rotate(5deg); }
    50% { transform: translateY(-10px) rotate(7deg); }
    100% { transform: translateY(0px) rotate(5deg); }
  }

  .nonstop-banner__main-image {
    animation: float 3s ease-in-out infinite;
  }

  /* Responsive para Pantallas Pequeñas */
  @media (max-width: 767px) {
    .nonstop-banner__container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .nonstop-banner__left, .nonstop-banner__right {
      width: 100%;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 1rem;
    }

    .nonstop-banner__center {
      width: 50%;
      max-width: 250px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .nonstop-banner {
      padding: 5rem 0;
    }
  }
</style>



