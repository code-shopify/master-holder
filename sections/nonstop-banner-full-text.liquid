<div class="t4s-section-inner t4s-container-wrap">
  {{ 'newsletter.css' | asset_url | stylesheet_tag }}
  
  <div class="t4s-container"> 
    <div class="nonstop-banner1">
      <div class="nonstop-banner__container1">

        <!-- Sección Izquierda: Texto y Formulario -->
        <div class="nonstop-banner__left1" style="background-color: {{ section.settings.bg_color }}">
          <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
          <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
          
          <div class="t4s-newsletter t4s_newsletter_se t4s-newsl-des-3 t4s-newsletter-wrap content-all-center">
            <div class="t4s-newsletter-parent t4s-text-center">
              {% render 'newsletter' %}
            </div>
          </div>

        </div>

        <!-- Sección Derecha: Imagen -->
        <div class="nonstop-banner__right1">
          <img src="{{ section.settings.main_image | img_url: 'master' }}" 
               alt="Main Product" class="nonstop-banner__main-image1">
        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .nonstop-banner1 {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rem 0;
    width: 100%;
    position: relative;
  }

  .nonstop-banner__container1 {
    display: grid;
    grid-template-columns: 50% 50%;
    max-width: 1500px;
    width: 100%;
    align-items: center;
    position: relative;
    border-radius: 1rem;
  }

  .nonstop-banner__left1 {
    background-color: #f0f0f0;
    padding: 4rem 7rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
  }

  .nonstop-banner__left1 h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .nonstop-banner__left1 p {
    font-size: 1.4em;
    margin-bottom: 20px;
  }

  .nonstop-banner__right1 {
    background-color: #f0f0f0;
    position: relative;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 100%;
  }

  .nonstop-banner__main-image1 {
    width: 70%;
    max-width: 500px;
    height: auto;
    object-fit: contain;
    transform: rotate(5deg);
    filter: drop-shadow(10px 10px 30px rgba(0, 0, 0, 0.3));
    animation: move-side 4s ease-in-out infinite;
  }

  @keyframes move-side {
    0% { transform: translateX(0px) rotate(5deg); }
    50% { transform: translateX(-10px) rotate(5deg); }
    100% { transform: translateX(0px) rotate(5deg); }
  }

  @media (max-width: 767px) {
    .nonstop-banner__container1 {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .nonstop-banner__left1 {
      width: 100%;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 2rem;
    }

    .nonstop-banner__right1 {
      width: 100%;
      justify-content: center;
      align-items: center;
    }

    .nonstop-banner1 {
      padding: 5rem 0;
    }

    .nonstop-banner__main-image1 {
      width: 80%;
      max-width: 400px;
      height: auto;
    }
  }
</style>
