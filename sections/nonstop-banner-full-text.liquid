    },
    {
      "type": "text",
      "id": "right_subtitle",
      "label": "Right Subtitle",
      "default": "A description for the right section."
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
