<div class="t4s-section-inner t4s-container-wrap">
  <div class="t4s-container"> 
    <div class="nonstop-banner1">
      <div class="nonstop-banner__container1">

        <!-- Sección Izquierda: Texto y Botón -->
        <div class="nonstop-banner__left1" style="background-color: {{ section.settings.bg_color }}">
          <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
          <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
          
        </div>

        <!-- Sección Centro: Imagen Flotante -->
        <div class="nonstop-banner__center1">
          <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Product" class="nonstop-banner__main-image1">
        </div>

        <!-- Sección Derecha: Texto en lugar de imagen -->
        <div class="nonstop-banner__right1" style="background-color: {{ section.settings.bg_color }}">
          <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.right_title }}</h2>
          <p style="color: {{ section.settings.text_color }}">{{ section.settings.right_subtitle }}</p>
          <a href="{{ section.settings.button_link }}" class="nonstop-banner__button1" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}">
            {{ section.settings.button_text }}
          </a>
        </div>

      </div>
    </div>
  </div>
</div>
<style>
  .nonstop-banner1{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rem 0;
    width: 100%;
    position: relative;
  }

  .nonstop-banner__container1 {
    display: grid;
    grid-template-columns: 50% 50%;
    max-width: 1500px;
    width: 100%;
    align-items: center;
    position: relative;
    border-radius: 1rem;
  }

  /* Sección Izquierda (Texto y Botón) */
  .nonstop-banner__left1, .nonstop-banner__right1{
    background-color: #f0f0f0;
    padding: 4rem 7rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
  }

  .nonstop-banner__left1 h2, .nonstop-banner__right1 h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .nonstop-banner__left1 p, .nonstop-banner__right1 p {
    font-size: 1.4em;
    margin-bottom: 20px;
  }

  .nonstop-banner__button1 {
    display: inline-block;
    padding: 14px 26px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 1rem;
    text-align: center;
    border: 2px solid black;
    font-size: 1.2em;
    background: black;
    color: white;
  }

  /* Imagen Flotante en el Centro */
  .nonstop-banner__center1 {
    position: absolute;
    top: 40%;
    left: 45%;
    transform: translate(-50%, -40%);
    z-index: 5;
    width: 14rem;
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
  }

  .nonstop-banner__main-image1 {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transform: rotate(10deg);
    filter: drop-shadow(15px 15px 40px rgba(0, 0, 0, 0.4));
    animation: float 3s ease-in-out infinite;
  }

  /* Animación de Flotación */
  @keyframes float {
    0% { transform: translateY(0px) rotate(10deg); }
    50% { transform: translateY(-10px) rotate(12deg); }
    100% { transform: translateY(0px) rotate(10deg); }
  }

  /* Responsive para Pantallas Pequeñas */
  @media (max-width: 767px) {
    .nonstop-banner__container1 {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .nonstop-banner__left1, .nonstop-banner__right1 {
      width: 100%;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 1rem;
    }

    .nonstop-banner__center1 {
      width: 7rem;
      top: 50%;
      left: 95%;
      transform: translate(-50%, -35%);
    }

    .nonstop-banner1{
      padding: 5rem 0;
    }
    
    .nonstop-banner__main-image1{
      width: 100%;
      height: 100%;
    }
  }
</style> 


{% schema %}
{
  "name": "Nonstop Banner text",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NONSTOP COLOR"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "NEW color-matched caps and lids."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Right Title",
      "default": "New Feature"
    },
    {
      "type": "text",
      "id": "right_subtitle",
      "label": "Right Subtitle",
      "default": "A description for the right section."
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop New Colors"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Nonstop Banner text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
