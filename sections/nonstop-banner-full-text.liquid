<div class="t4s-section-inner t4s-container-wrap">
  {{ 'newsletter.css' | asset_url | stylesheet_tag }}
  <div class="t4s-container"> 
    <div class="nonstop-banner1">
      <div class="nonstop-banner__container1">

        <!-- Sección Izquierda: Texto y Botón -->
        <div class="nonstop-banner__left1" style="background-color: {{ section.settings.bg_color }}">
          <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
          <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
          {% render 'newsletter' %}
          
        </div>

        <!-- Sección Derecha: Imagen Flotante Full Width -->
        <div class="nonstop-banner__right1">
          <img src="{{ section.settings.main_image | img_url: 'master' }}" 
               alt="Main Product" class="nonstop-banner__main-image1">
        </div>

      </div>
    </div>
  </div>
</div>
<style>
  
   .nonstop-banner1 {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rem 0;
    width: 100%;
    position: relative;
  }

  .nonstop-banner__container1 {
    display: grid;
    grid-template-columns: 50% 50%;
    max-width: 1500px;
    width: 100%;
    align-items: center;
    position: relative;
    border-radius: 1rem;
  }

  /* Sección Izquierda (Texto y Botón) */
  .nonstop-banner__left1 {
    background-color: #f0f0f0;
    padding: 4rem 7rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
  }

  .nonstop-banner__left1 h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .nonstop-banner__left1 p {
    font-size: 1.4em;
    margin-bottom: 20px;
  }

  .nonstop-banner__button1 {
    display: inline-block;
    padding: 14px 26px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 1rem;
    text-align: center;
    border: 2px solid black;
    font-size: 1.2em;
    background: black;
    color: white;
  }

  /* Sección Derecha (Imagen Flotante con movimiento lateral) */
  .nonstop-banner__right1 {
    background-color: #f0f0f0;
    position: relative;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 100%;
  }

  .nonstop-banner__main-image1 {
    width: 70%;  /* Ajustado al 70% del ancho */
    max-width: 500px;  /* Máximo tamaño */
    height: auto;
    object-fit: contain;
    transform: rotate(5deg);
    filter: drop-shadow(10px 10px 30px rgba(0, 0, 0, 0.3));
    animation: move-side 4s ease-in-out infinite; /* Nueva animación */
  }

  /* Animación de Movimiento de Lado a Lado */
  @keyframes move-side {
    0% { transform: translateX(0px) rotate(5deg); }
    50% { transform: translateX(-10px) rotate(5deg); } /* Movimiento a la izquierda */
    100% { transform: translateX(0px) rotate(5deg); }
  }

  /* Responsive para Pantallas Pequeñas */
  @media (max-width: 767px) {
    .nonstop-banner__container1 {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .nonstop-banner__left1 {
      width: 100%;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 2rem;
    }

    .nonstop-banner__right1 {
      width: 100%;
      justify-content: center;
      align-items: center;
    }

    .nonstop-banner1 {
      padding: 5rem 0;
    }

    .nonstop-banner__main-image1 {
      width: 80%;  /* Para pantallas pequeñas */
      max-width: 400px;
      height: auto;
    }
  }

</style

{% schema %}
{
  "name": "Nonstop Banner Full Image",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NONSTOP COLOR"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "NEW color-matched caps and lids."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop New Colors"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Nonstop Banner Full Image",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
