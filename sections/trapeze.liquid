{% schema %}
{
  "name": "Trapeze Section",
  "tag": "section",
  "class": "shopify_trapeze-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "HOT STAYS HOT. COLD STAYS COLD."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Our durable double wall stainless steel vacuum insulated technology..."
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Ícono 1"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Ícono 2"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de fondo"
    }
  ],
  "presets": [
    {
      "name": "Trapeze Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.shopify_trapeze-section {
  display: flex;
  min-height: 617px;
  overflow: hidden;
}
.shopify_trapeze-section .content {
  width: 50%;
  background-color: #3DA3D3;
  padding: 76px 96px;
  color: white;
}
.shopify_trapeze-section .content h2 {
  font-size: 70px;
  line-height: 70px;
  text-transform: uppercase;
  margin: 0 0 24px;
}
.shopify_trapeze-section .content p {
  font-size: 19px;
  line-height: 25.5px;
}
.shopify_trapeze-section .icons {
  display: flex;
  gap: 12px;
  margin-top: 24px;
}
.shopify_trapeze-section .icons img {
  width: 217px;
}
.shopify_trapeze-section .image {
  width: 50%;
  background-size: cover;
  background-position: center;
}
{% endstyle %}

<div class="shopify_trapeze-section">
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
    <div class="icons">
      {% if section.settings.icon_1 %}
        <img src="{{ section.settings.icon_1 | image_url }}" alt="Icon 1">
      {% endif %}
      {% if section.settings.icon_2 %}
        <img src="{{ section.settings.icon_2 | image_url }}" alt="Icon 2">
      {% endif %}
    </div>
  </div>
  <div class="image" style="background-image: url({{ section.settings.background_image | image_url }});"></div>
</div>
