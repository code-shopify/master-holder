{% schema %}
{
  "name": "Video Hero",
  "tag": "section",
  "class": "t4s-section t4s-section-all t4s_tp_cd t4s-hero-video",
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "URL del video",
      "accept": ["youtube", "vimeo"]
    },
    {
      "type": "header",
      "content": "Contenido"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Over 120 years of heritage"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "For over a century people have loved Thermos products because they make everyday life better every time. The little things go a long way. So do we."
    },
    {
      "type": "header",
      "content": "Diseño"
    },
    {
      "type": "range",
      "id": "height",
      "min": 300,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Altura mínima",
      "default": 500
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Color de superposición",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Opacidad de superposición",
      "default": 0.36
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Video Hero",
      "category": "Video"
    }
  ]
}
{% endschema %}

{%- style -%}
.t4s-section-{{ section.id }} {
  min-height: {{ section.settings.height }}px;
  position: relative;
  overflow: hidden;
}

.t4s-section-{{ section.id }} .video-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.t4s-section-{{ section.id }} .video-wrapper iframe {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  object-fit: cover;
  pointer-events: none;
}

.t4s-section-{{ section.id }} .t4s-hero-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}
{%- endstyle -%}

{{ 'section.css' | asset_url | stylesheet_tag }}
{{ 'hero.css' | asset_url | stylesheet_tag }}

<div class="t4s-section-inner t4s_nt_se_{{ section.id }} t4s-section-{{ section.id }}">
  {% if section.settings.video_url != blank %}
    <div class="video-wrapper">
      {% if section.settings.video_url.type == "youtube" %}
        <iframe
          width="100%"
          height="100%"
          src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&mute=1&loop=1&playlist={{ section.settings.video_url.id }}&controls=0&showinfo=0&rel=0&enablejsapi=1&version=3&playerapiid=ytplayer"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;"
        ></iframe>
      {% elsif section.settings.video_url.type == "vimeo" %}
        <iframe
          src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?background=1&autoplay=1&loop=1&byline=0&title=0&muted=1"
          width="100%"
          height="100%"
          frameborder="0"
          webkitallowfullscreen
          mozallowfullscreen
          allowfullscreen
          style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;"
        ></iframe>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="t4s-hero-content">
    <div class="t4s-container">
      <div class="t4s-hero-text">
        <h2 class="t4s-hero-title">{{ section.settings.title }}</h2>
        <div class="t4s-hero-description">{{ section.settings.description }}</div>
      </div>
    </div>
  </div>
</div>

<style>
.t4s-section-inner {
  position: relative;
  overflow: hidden;
  min-height: {{ section.settings.height }}px;
}

.video-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  overflow: hidden;
}

.t4s-hero-content {
  position: relative;
  z-index: 3;
  text-align: center;
  padding: 60px 20px;
}

.t4s-hero-title {
  color: {{ section.settings.text_color }};
  margin-bottom: 20px;
  font-size: 2.5em;
  position: relative;
}

.t4s-hero-description {
  color: {{ section.settings.text_color }};
  opacity: 0.9;
  max-width: 800px;
  margin: 0 auto;
  position: relative;
}

.t4s-section-inner:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: {{ section.settings.overlay_color }};
  opacity: {{ section.settings.overlay_opacity }};
  z-index: 2;
}
</style>