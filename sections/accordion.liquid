{% schema %}
{
  "name": "Countdown Timer",
  "settings": [
    {
      "type": "range",
      "id": "cold_hours",
      "label": "Horas frías",
      "default": 50,
      "min": 1,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "hot_hours",
      "label": "Horas calientes",
      "default": 10,
      "min": 1,
      "max": 100,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="count-hours-section" 
  data-cold-hours="{{ section.settings.cold_hours }}" 
  data-hot-hours="{{ section.settings.hot_hours }}">
  <div class="t4s-container t4s-main-product__content is--layout_default t4s-product-media__thumbnails_bottom t4s-product-thumb-size__medium"> 
  <div class="count-hours-container">
    <div class="count-hours-item cold">
      <strong>HASTA <span id="cold-counter">12</span> HRS FRÍO</strong>
    </div>
    <div>
      {%- render 'custom-product-icons' -%}
    </div>
    {% comment %}
    <div class="count-hours-item hot">
      <strong>HASTA <span id="hot-counter">8</span> HRS CALIENTE</strong>
    </div>
    {% endcomment %}
  </div>
    </div>
</section>

{% stylesheet %}
  .count-hours-section {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 20px;
  }

  .count-hours-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    overflow: hidden;
    margin-top: 50px;
    margin-bottom: 50px;
  }

  .count-hours-item {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50px;
    font-size: 40px;
    font-weight: bold;
    font-family: Arial, sans-serif;
    line-height: 4.375rem;
    background-color: #00449e;
    border-radius: 15px;
  }

  .cold {
    /*color: #007BFF;*/
    color: #fff;
    border-right: 2px solid #eee;
  }

  .hot {
    color: #DC3545;
  }

  @media (max-width: 768px) {
    .count-hours-container {
      flex-direction: row;
    }
    .count-hours-item {
      font-size: 24px;
    }
  }
{% endstylesheet %}

{% javascript %}
  function startCounter(id, maxValue, duration) {
    let counter = document.getElementById(id);
    let start = 0;
    let stepTime = Math.abs(Math.floor(duration / maxValue));

    let timer = setInterval(() => {
      start++;
      counter.innerText = start;
      if (start >= maxValue) {
        clearInterval(timer);
      }
    }, stepTime);
  }

  document.addEventListener("DOMContentLoaded", function () {
    let section = document.querySelector(".count-hours-section");

    if (section) {
      let coldHours = parseInt(section.getAttribute("data-cold-hours"), 10);
      let hotHours = parseInt(section.getAttribute("data-hot-hours"), 10);

      let observer = new IntersectionObserver(
        (entries, observer) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              startCounter("cold-counter", coldHours, 2000);
              startCounter("hot-counter", hotHours, 2000);
              observer.disconnect(); // Evita que el contador se reinicie
            }
          });
        },
        { threshold: 0.5 }
      );

      observer.observe(section);
    }
  });
{% endjavascript %}
