{% schema %}
{
  "name": "Countdown Timer",
  "settings": [
    {
      "type": "range",
      "id": "cold_hours",
      "label": "Horas frías",
      "default": 12,
      "min": 1,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "hot_hours",
      "label": "Horas calientes",
      "default": 8,
      "min": 1,
      "max": 100,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="count-hours-section" 
  data-cold-hours="{{ section.settings.cold_hours }}" 
  data-hot-hours="{{ section.settings.hot_hours }}">
  <div class="t4s-container">
    <div class="count-hours-container">
      <div class="count-hours-item cold">
        HASTA <strong><span id="cold-counter"> {{ section.settings.cold_hours }} </span></strong> HRS FRÍO
      </div>
      {% comment %}
        <div class="count-hours-item hot">
          <strong>HASTA <span id="hot-counter">{{ section.settings.hot_hours }}</span> HRS CALIENTE</strong>
        </div>
      {% endcomment %} 
      {% comment %}
      <div class="count-hours-item">
        
        {%- render 'custom-product-icons' -%}
      </div>
      {% endcomment %} 
    </div>
    
    {% comment %}
        <div class="count-hours-icons">
          {%- render 'custom-product-icons' -%}
        </div>
      {% endcomment %}
  </div>
</section>

{% stylesheet %}
  .count-hours-section {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 20px;
  }

  .count-hours-container {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    overflow: hidden;
    margin-top: 50px;
    margin-bottom: 20px;
    max-width: 100%;
  }

  .count-hours-item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    font-size: 4rem;
    font-weight: 400;
    font-family: Arial, sans-serif;
    text-align: center;
    border-radius: 15px;
    margin: 10px;
  }

    .count-hours-item span {
      margin-inline: 15px;
    }

  .cold {
    background-color: #00449e;
    color: #fff;
    border-right: 2px solid #eee;
  }

  .hot {
    background-color: #dc3545;
    color: #fff;
  }

  /* Íconos */
  .count-hours-icons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
    margin-top: 10px;
  }

  /* Responsive ajustes */
  @media (max-width: 1024px) {
    .count-hours-item {
      font-size: 4rem;
      padding: 30px;
    }
  }

  @media (max-width: 768px) {
    .count-hours-container {
      flex-direction: column;
    }
    
    .count-hours-item {
      font-size: 1.5rem;
      padding: 20px;
      width: 90%;
      margin: 5px auto;
      border-right: none;
    }
  }

  @media (max-width: 480px) {
    .count-hours-item {
      font-size: 1.2rem;
      padding: 15px;
      width: 95%;
    }
  }
{% endstylesheet %}

{% javascript %}
  function startCounter(id, maxValue, duration) {
    let counter = document.getElementById(id);
    if (!counter) return;

    let start = 0;
    let stepTime = Math.abs(Math.floor(duration / maxValue));

    let timer = setInterval(() => {
      start++;
      counter.innerText = start;
      if (start >= maxValue) {
        clearInterval(timer);
      }
    }, stepTime);
  }

  document.addEventListener("DOMContentLoaded", function () {
    let section = document.querySelector(".count-hours-section");

    if (section) {
      let coldHours = parseInt(section.getAttribute("data-cold-hours"), 10);
      let hotHours = parseInt(section.getAttribute("data-hot-hours"), 10);

      let observer = new IntersectionObserver(
        (entries, observer) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              startCounter("cold-counter", coldHours, 2000);
              startCounter("hot-counter", hotHours, 2000);
              observer.disconnect();
            }
          });
        },
        { threshold: 0.5 }
      );

      observer.observe(section);
    }
  });
{% endjavascript %}
