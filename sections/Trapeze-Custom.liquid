{% schema %}
{
  "name": "Trapeze Section",
  "tag": "section",
  "class": "shopify_trapeze-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "HOT STAYS HOT.<br>COLD STAYS COLD."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Our durable double wall stainless steel vacuum insulated technology, you are certain to find a product that fits your lifestyle while delivering superior performance with exceptional durability"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#4CB5E6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Ícono 1"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Ícono 2"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de fondo"
    }
  ],
  "presets": [
    {
      "name": "Trapeze Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
.shopify_trapeze-section {
  position: relative;
  overflow: hidden;
}

.trapeze-container {
  display: flex;
  width: 100%;
  height: 617px;
}

.trapeze-content {
  width: 48%;
  display: flex;
  justify-content: flex-end;
  background-color: {{ section.settings.background_color }};
  padding: 5% 96px;
  position: relative;
}

.trapeze-content::after {
  content: '';
  position: absolute;
  right: -66px;
  top: 0;
  width: 128px;
  height: 100%;
  background-color: {{ section.settings.background_color }};
  transform: skew(-10deg);
}

.trapeze-content-wrap {
  max-width: 611px;
  width: 100%;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.trapeze-heading {
  color: {{ section.settings.text_color }};
  font-family: var(--thermos-dinot-cond-bold);
  font-size: var(--thermos-font-size-70);
  line-height: var(--thermos-line-height-70);
  text-transform: uppercase;
  margin: 0;
  padding: 24px 0 0;
}

.trapeze-description {
  color: {{ section.settings.text_color }};
  font-family: var(--thermos-dinot);
  font-size: var(--thermos-font-size-19);
  line-height: var(--thermos-line-height-25-5);
  font-weight: var(--thermos-font-Weight-bold);
  margin: 0;
}

.trapeze-icons {
  display: flex;
  gap: 20px;
  margin-top: 24px;
  padding-right: 15px;
}

.trapeze-icon {
  width: 217px;
  height: auto;
}

.trapeze-image {
  width: 52%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

@media only screen and (max-width: 768px) {
  .trapeze-container {
    flex-direction: column;
    height: auto;
  }

  .trapeze-content {
    width: 100%;
    padding: 48px 15px;
  }

  .trapeze-content::after {
    display: none;
  }

  .trapeze-heading {
    font-size: var(--thermos-font-size-34);
    line-height: var(--thermos-line-height-40);
    text-align: center;
  }

  .trapeze-description {
    font-size: var(--thermos-font-size-14);
    line-height: var(--thermos-line-height-20);
    text-align: center;
  }

  .trapeze-icons {
    justify-content: center;
  }

  .trapeze-icon {
    width: 120px;
  }

  .trapeze-image {
    width: 100%;
    height: 300px;
  }
}
</style>

<div class="shopify_trapeze-section">
  <div class="trapeze-container">
    <div class="trapeze-content">
      <div class="trapeze-content-wrap">
        <div>
          <h2 class="trapeze-heading">{{ section.settings.heading }}</h2>
          <p class="trapeze-description">{{ section.settings.description }}</p>
        </div>
        <div class="trapeze-icons">
          {% if section.settings.icon_1 %}
            <img src="{{ section.settings.icon_1 | img_url: 'master' }}" 
                 alt="Kid friendly Easy to open and close" 
                 class="trapeze-icon"
                 width="217"
                 height="auto"
                 loading="lazy">
          {% endif %}
          {% if section.settings.icon_2 %}
            <img src="{{ section.settings.icon_2 | img_url: 'master' }}" 
                 alt="Easy Clean dishwasher safe" 
                 class="trapeze-icon"
                 width="217"
                 height="auto"
                 loading="lazy">
          {% endif %}
        </div>
      </div>
    </div>
    <div class="trapeze-image" {% if section.settings.background_image %}style="background-image: url({{ section.settings.background_image | img_url: 'master' }})"{% endif %}></div>
  </div>
</div>
