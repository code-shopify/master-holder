{% schema %}
{
  "name": "Trapeze Section",
  "tag": "section",
  "class": "shopify_trapeze-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "HOT STAYS HOT.<br>COLD STAYS COLD."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Our durable double wall stainless steel vacuum insulated technology, you are certain to find a product that fits your lifestyle while delivering superior performance with exceptional durability"
    },
    {
      "type": "header",
      "content": "Estilos del Título"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del título",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Tamaño del título",
      "default": 70
    },
    {
      "type": "range",
      "id": "heading_line_height",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Altura de línea del título",
      "default": 70
    },
    {
      "type": "range",
      "id": "heading_margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen superior del título",
      "default": 0
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen inferior del título",
      "default": 24
    },
    {
      "type": "header",
      "content": "Estilos de la Descripción"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Color de la descripción",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Tamaño de la descripción",
      "default": 19
    },
    {
      "type": "range",
      "id": "description_line_height",
      "min": 16,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Altura de línea de la descripción",
      "default": 25
    },
    {
      "type": "range",
      "id": "description_margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen superior de la descripción",
      "default": 0
    },
    {
      "type": "range",
      "id": "description_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen inferior de la descripción",
      "default": 24
    },
    {
      "type": "header",
      "content": "Espaciado del Contenedor"
    },
    {
      "type": "range",
      "id": "container_padding_top",
      "min": 0,
      "max": 200,
      "step": 8,
      "unit": "px",
      "label": "Padding superior del contenedor",
      "default": 48
    },
    {
      "type": "range",
      "id": "container_padding_bottom",
      "min": 0,
      "max": 200,
      "step": 8,
      "unit": "px",
      "label": "Padding inferior del contenedor",
      "default": 48
    },
    {
      "type": "range",
      "id": "container_padding_left",
      "min": 0,
      "max": 200,
      "step": 8,
      "unit": "px",
      "label": "Padding izquierdo del contenedor",
      "default": 96
    },
    {
      "type": "range",
      "id": "container_padding_right",
      "min": 0,
      "max": 200,
      "step": 8,
      "unit": "px",
      "label": "Padding derecho del contenedor",
      "default": 96
    },
    {
      "type": "header",
      "content": "Espaciado de los Íconos"
    },
    {
      "type": "range",
      "id": "icons_gap",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Espacio entre íconos",
      "default": 20
    },
    {
      "type": "range",
      "id": "icons_margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen superior de los íconos",
      "default": 24
    },
    {
      "type": "header",
      "content": "Colores Generales"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#4CB5E6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Ícono 1"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Ícono 2"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de fondo"
    }
  ],
  "presets": [
    {
      "name": "Trapeze Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
.shopify_trapeze-section {
  position: relative;
  overflow: hidden;
}

.trapeze-container {
  display: flex;
  width: 100%;
  height: 617px;
}

.trapeze-content {
  width: 48%;
  display: flex;
  justify-content: flex-end;
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.container_padding_top }}px {{ section.settings.container_padding_right }}px {{ section.settings.container_padding_bottom }}px {{ section.settings.container_padding_left }}px;
  position: relative;
}

.trapeze-content::after {
  content: '';
  position: absolute;
  right: -66px;
  top: 0;
  width: 128px;
  height: 100%;
  background-color: {{ section.settings.background_color }};
  transform: skew(-10deg);
}

.trapeze-content-wrap {
  max-width: 611px;
  width: 100%;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.trapeze-heading {
  color: {{ section.settings.heading_color }};
  font-family: var(--thermos-dinot-cond-bold);
  font-size: {{ section.settings.heading_size }}px;
  line-height: {{ section.settings.heading_line_height }}px;
  text-transform: uppercase;
  margin: {{ section.settings.heading_margin_top }}px 0 {{ section.settings.heading_margin_bottom }}px 0;
}

.trapeze-description {
  color: {{ section.settings.description_color }};
  font-family: var(--thermos-dinot);
  font-size: {{ section.settings.description_size }}px;
  line-height: {{ section.settings.description_line_height }}px;
  font-weight: var(--thermos-font-Weight-bold);
  margin: {{ section.settings.description_margin_top }}px 0 {{ section.settings.description_margin_bottom }}px 0;
}

.trapeze-icons {
  display: flex;
  gap: {{ section.settings.icons_gap }}px;
  margin-top: {{ section.settings.icons_margin_top }}px;
  padding-right: 15px;
}

.trapeze-icon {
  width: 217px;
  height: auto;
}

.trapeze-image {
  width: 52%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

@media only screen and (max-width: 768px) {
  .trapeze-container {
    flex-direction: column;
    height: auto;
  }

  .trapeze-content {
    width: 100%;
    padding: {{ section.settings.container_padding_top | divided_by: 2 }}px 15px {{ section.settings.container_padding_bottom | divided_by: 2 }}px 15px;
  }

  .trapeze-content::after {
    display: none;
  }

  .trapeze-heading {
    font-size: calc({{ section.settings.heading_size }}px * 0.5);
    line-height: calc({{ section.settings.heading_line_height }}px * 0.5);
    text-align: center;
  }

  .trapeze-description {
    font-size: calc({{ section.settings.description_size }}px * 0.75);
    line-height: calc({{ section.settings.description_line_height }}px * 0.75);
    text-align: center;
  }

  .trapeze-icons {
    justify-content: center;
  }

  .trapeze-icon {
    width: 120px;
  }

  .trapeze-image {
    width: 100%;
    height: 300px;
  }
}
</style>

<div class="shopify_trapeze-section">
  <div class="trapeze-container">
    <div class="trapeze-content">
      <div class="trapeze-content-wrap">
        <div>
          <h2 class="trapeze-heading">{{ section.settings.heading }}</h2>
          <p class="trapeze-description">{{ section.settings.description }}</p>
        </div>
        <div class="trapeze-icons">
          {% if section.settings.icon_1 %}
            <img src="{{ section.settings.icon_1 | img_url: 'master' }}" 
                 alt="Kid friendly Easy to open and close" 
                 class="trapeze-icon"
                 width="217"
                 height="auto"
                 loading="lazy">
          {% endif %}
          {% if section.settings.icon_2 %}
            <img src="{{ section.settings.icon_2 | img_url: 'master' }}" 
                 alt="Easy Clean dishwasher safe" 
                 class="trapeze-icon"
                 width="217"
                 height="auto"
                 loading="lazy">
          {% endif %}
        </div>
      </div>
    </div>
    <div class="trapeze-image" {% if section.settings.background_image %}style="background-image: url({{ section.settings.background_image | img_url: 'master' }})"{% endif %}></div>
  </div>
</div>
